<UserControl x:Class="ReportWizardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hw="http://schemas.hpod9.com/haley/wpf"
             xmlns:hm="http://schemas.hpod9.com/haley/mvvm"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             Width="390"
             Height="745">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/EZLogger;component/Resources/EzLoggerRD.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <local:ReadOnlyField Grid.Row="0"
                             HorizontalAlignment="Left"
                             LabelText="Bryan Lundeen"
                             HeaderText="Patient Name"
                             Height="95"
                             Width="345"
                             Margin="10,10,10,0" />
        <local:UserDataEntryField Grid.Row="1"
                                  HorizontalAlignment="Left"
                                  HeaderText="Patient Number"
                                  Height="85"
                                  Width="345"
                                  Margin="10,10,10,0" />
        <TabControl Grid.Row="2"
                    Margin="0,10,0,0" Background="{x:Null}">
            <TabItem Header="Tasks1" HorizontalAlignment="Left" Background="#FFE5E5E5">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left">
                    <StackPanel Margin="10" Width="347" HorizontalAlignment="Left">
                        <local:TaskStepControl x:Name="TaskStepControlA"
                                               Margin="0,10,0,0"
                                               ButtonContent="_A"
                                               CheckBoxContent="1. Confirm patient number" Width="342" HorizontalAlignment="Left" />
                        <local:TaskStepControl x:Name="TaskStepControlB"
                                               Margin="0,10,0,0"
                                               ButtonContent="_B"
                                               CheckBoxContent="2. Pull data from database" HorizontalAlignment="Left" />
                        <local:TaskStepControl x:Name="TaskStepControlC"
                                               Margin="0,10,0,10"
                                               ButtonContent="_C"
                                               CheckBoxContent="3. Select report type and dates" HorizontalAlignment="Left" />
                        <local:TaskStepControl x:Name="TaskStepControlD"
                                               Margin="0,10,0,10"
                                               ButtonContent="_D"
                                               CheckBoxContent="4. Check TCAR log" HorizontalAlignment="Left" />
                        <local:TaskStepControl x:Name="TaskStepControlE"
                                               Margin="0,10,0,10"
                                               ButtonContent="_E"
                                               CheckBoxContent="5. Check date of last HLV" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Tasks2">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10">
                        <local:TaskStepControl x:Name="TaskStepControlF"
                                               Margin="0,10,0,0"
                                               ButtonContent="_F"
                                               CheckBoxContent="_6. Confirm report opinion" />
                        <local:TaskStepControl x:Name="TaskStepControlG"
                                               Margin="0,10,0,0"
                                               ButtonContent="_G"
                                               CheckBoxContent="7. Select report author" />
                        <local:TaskStepControl x:Name="TaskStepControlH"
                                               Margin="0,10,0,10"
                                               ButtonContent="_H"
                                               CheckBoxContent="8. Select who authorized approval"
                                               Loaded="TaskStepControl_Loaded" />
                        <local:TaskStepControl x:Name="TaskStepControlI"
                                               Margin="0,10,0,10"
                                               ButtonContent="_I"
                                               CheckBoxContent="9. Rename and save file" />
                        <local:TaskStepControl x:Name="TaskStepControlJ"
                                               Margin="0,10,0,10"
                                               ButtonContent="_J"
                                               CheckBoxContent="10. Select cover pages to print" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
