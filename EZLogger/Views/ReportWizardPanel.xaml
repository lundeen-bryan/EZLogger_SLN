<UserControl x:Class="ReportWizardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hw="http://schemas.hpod9.com/haley/wpf"
             xmlns:hm="http://schemas.hpod9.com/haley/mvvm"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             Width="330"
             Height="1075">
    <ScrollViewer FontFamily="Candara"
                  FontSize="18"
                  Background="DarkGray">
        <Grid Background="White">
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="01. Find Patient Number in Report"
                      Margin="6,6,0,0"
                      VerticalAlignment="Top"
                      Width="289"
                      BorderBrush="DarkGray">
                <Button x:Name="FindPatientId"
                        Content="Search"
                        HorizontalAlignment="Left"
                        Click="FindPatientId_Click"
                        Margin="6,6,0,0"
                        VerticalAlignment="Top"
                        Height="29"
                        Width="100"
                        Background="{x:Null}"
                        BorderBrush="DarkGray"
                        Cursor="Hand" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="02. Patient Number"
                      Margin="6,76,0,0"
                      VerticalAlignment="Top"
                      Width="289"
                      BorderBrush="DarkGray">
                <TextBox x:Name="TextBoxPatientNumber"
                         HorizontalAlignment="Left"
                         Margin="6,6,0,0"
                         TextWrapping="Wrap"
                         Width="175"
                         BorderBrush="DarkGray"
                         FontFamily="Lucida Console"
                         FontSize="11"
                         Height="31"
                         Padding="6,6,6,6" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="03. Look up patient in database"
                      Margin="5,145,0,0"
                      VerticalAlignment="Top"
                      Width="290"
                      BorderBrush="DarkGray">
                <Button x:Name="LookupDatabase"
                        Content="Database"
                        Click="PatientDatabaseButton_Click"
                        HorizontalAlignment="Left"
                        Margin="6,6,0,0"
                        VerticalAlignment="Top"
                        Height="29"
                        Width="100"
                        Cursor="Hand"
                        BorderBrush="DarkGray"
                        Background="{x:Null}"
                        AutomationProperties.AcceleratorKey="D" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="05. Maximum Commitment Date"
                      Margin="6,315,0,0"
                      VerticalAlignment="Top"
                      Width="284"
                      BorderBrush="DarkGray">
                <TextBox HorizontalAlignment="Left"
                         Margin="6,6,0,0"
                         TextWrapping="Wrap"
                         Width="175"
                         BorderBrush="DarkGray"
                         FontFamily="Lucida Console"
                         FontSize="11"
                         Height="31"
                         Padding="6,6,6,6" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="105"
                      Header="06. Report Type"
                      Margin="5,385,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <StackPanel Height="78"
                            VerticalAlignment="Top">
                    <ComboBox x:Name="ReportTypeCbo"
                              HorizontalAlignment="Left"
                              Margin="6,6,0,0"
                              Width="253"
                              Height="30"
                              FontFamily="Lucida Fax" />
                    <Button x:Name="ConfirmTypeBtn"
                            Click="ConfirmReportTypeButton_Click"
                            Cursor="Hand"
                            Content="Open Report Type Form"
                            HorizontalAlignment="Center"
                            Width="205"
                            Margin="0,6,0,0"
                            BorderBrush="DarkGray"
                            Background="{x:Null}"
                            Height="30"
                            AutomationProperties.AcceleratorKey="C" />
                </StackPanel>
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="07. Current Due Date"
                      Margin="5,486,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <TextBox x:Name="TextBoxCurrentDue"
                         HorizontalAlignment="Left"
                         Margin="6,6,0,0"
                         TextWrapping="Wrap"
                         Width="175"
                         BorderBrush="DarkGray"
                         FontFamily="Lucida Console"
                         FontSize="11"
                         Height="31"
                         Padding="6,6,6,6" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="08. Next Due Date"
                      Margin="7,555,0,0"
                      VerticalAlignment="Top"
                      Width="283"
                      BorderBrush="DarkGray">
                <TextBox x:Name="TextBoxNextDue"
                         HorizontalAlignment="Left"
                         Margin="6,6,0,0"
                         TextWrapping="Wrap"
                         Width="175"
                         BorderBrush="DarkGray"
                         FontFamily="Lucida Console"
                         FontSize="11"
                         Height="31"
                         Padding="6,6,6,6" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="09. Confirm Report Opinion"
                      Margin="5,626,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <Button x:Name="BtnOpenOpinionForm"
                        Click="OpenOpinionForm_Click"
                        Content="Open Opinion Form"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="6,0,0,0"
                        VerticalAlignment="Center"
                        Height="29"
                        Width="174"
                        BorderBrush="DarkGray"
                        Background="{x:Null}"
                        AutomationProperties.AcceleratorKey="O" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="10. Select Report Author"
                      Margin="5,696,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <Button x:Name="BtnSelectAuthor"
                        Click="OpenAuthorForm_Click"
                        Content="Select Author Form"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="6,0,0,0"
                        VerticalAlignment="Center"
                        Height="29"
                        Width="174"
                        BorderBrush="DarkGray"
                        Background="{x:Null}"
                        AutomationProperties.AcceleratorKey="A" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="11. Select Who Approved Report"
                      Margin="5,770,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <Button x:Name="BtnSelectChief"
                        Content="Chief Approval Form"
                        Click="OpenChiefHost_Click"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="6,0,0,0"
                        VerticalAlignment="Center"
                        Height="29"
                        Width="189"
                        BorderBrush="DarkGray"
                        Background="{x:Null}"
                        AutomationProperties.AcceleratorKey="E" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="12. Rename and Save File"
                      Margin="5,840,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <Button x:Name="BtnSaveForm"
                        Content="File Save Form"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="6,0,0,0"
                        VerticalAlignment="Center"
                        Height="29"
                        Width="174"
                        BorderBrush="DarkGray"
                        Background="{x:Null}"
                        AutomationProperties.AcceleratorKey="F" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="13. Select Cover Pages to Print"
                      Margin="5,915,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <Button x:Name="BtnCoverPageForm"
                        Content="Cover Page Form"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="6,0,0,0"
                        VerticalAlignment="Center"
                        Height="29"
                        Width="174"
                        BorderBrush="DarkGray"
                        Background="{x:Null}"
                        AutomationProperties.AcceleratorKey="V" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="69"
                      Header="14. Sync With SharePoint"
                      Margin="5,985,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <Button x:Name="BtnSyncNow"
                        Content="Sync Now"
                        Cursor="Hand"
                        HorizontalAlignment="Left"
                        Margin="6,0,0,0"
                        VerticalAlignment="Center"
                        Height="29"
                        Width="103"
                        BorderBrush="DarkGray"
                        Background="{x:Null}"
                        AutomationProperties.AcceleratorKey="Y" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="100"
                      Header="04. Court Number(s)"
                      Margin="5,215,0,0"
                      VerticalAlignment="Top"
                      Width="285"
                      BorderBrush="DarkGray">
                <TextBlock x:Name="CourtNumbersTextBlock"
                           HorizontalAlignment="Left"
                           TextWrapping="Wrap"
                           Width="270"
                           Padding="6,6,6,6" />
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>