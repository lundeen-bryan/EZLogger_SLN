<UserControl x:Class="DueDatePprView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
             mc:Ignorable="d"
             d:DesignHeight="455"
             Width="560"
             Background="White"
             FontFamily="Candara"
             FontSize="18">
    <!-- Style block here -->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320"
                                      ShadowDepth="4"
                                      Opacity="0.5"
                                      BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10,8,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Controls:FormHeaderControl HeaderText="SELECT DUE DATES FOR PPR"
                                    Grid.Row="0" />
        <TextBlock Grid.Row="1"
                   Text="Calculating the First PPR Cycle Due Date"
                   FontWeight="Bold"
                   FontSize="14" />
        <Border Grid.Row="2"
                Background="LightYellow"
                Margin="0,5,0,10"
                Padding="5">
            <TextBlock Text="To get the first PPR due Date, add 6 months to the commitment date." />
        </Border>
        <Grid Grid.Row="3"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        HorizontalAlignment="Right">
                <Label Content="Commitment Date" />
                <TextBox x:Name="CommitmentDateTxt"
                         Width="150" />
            </StackPanel>
            <TextBlock Grid.Column="1"
                       Text="+ 6 months ="
                       VerticalAlignment="Center"
                       Margin="10,30,10,10"
                       FontSize="16"
                       FontFamily="Segoe Print" />
            <StackPanel Grid.Column="2"
                        HorizontalAlignment="Left">
                <Label Content="1st PPR Due Date" />
                <TextBox x:Name="FirstDueDateTxt"
                         Width="150" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="4"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        HorizontalAlignment="Right">
                <Label Content="Current Due Date" />
                <DatePicker x:Name="CurrentDueDatePick"
                            Width="150" />
            </StackPanel>
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Bottom"
                        Margin="10,15,10,3">
                <Button x:Name="YearDownBtn"
                        Content="🡇"
                        Width="22"
                        Height="22"
                        FontSize="12"
                        ToolTip="Move Current Due Date back one year"
                        Margin="0,0,4,0"
                        Background="White" />
                <Button x:Name="SwitchDatesBtn"
                        Content="Switch"
                        Background="White"
                        Width="64" />
            </StackPanel>
            <StackPanel Grid.Column="2"
                        HorizontalAlignment="Left">
                <Label Content="Next Due Date" />
                <DatePicker x:Name="NextDueDatePick"
                            Width="150" />
            </StackPanel>
        </Grid>
        <Button Grid.Row="5"
                x:Name="AcceptDatesBtn"
                Content="_Accept These Dates"
                Width="200"
                HorizontalAlignment="Center"
                Margin="0,0,0,10"
                Background="White" />
        <Grid Grid.Row="6"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        HorizontalAlignment="Right">
                <Label Content="Expiration Date" />
                <TextBox x:Name="MaxDateTxt"
                         Width="150"
                         Margin="0,0,24,0" />
            </StackPanel>
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Left">
                <Label Content="Days Since Due"
                       Margin="24,0,0,0" />
                <TextBox x:Name="DaysSinceTxt"
                         Width="150"
                         Margin="24,0,0,0" />
            </StackPanel>
        </Grid>
        <Button Grid.Row="7"
                x:Name="ContinueBtn"
                Content="_Save"
                HorizontalAlignment="Center"
                Padding="10,5"
                Background="White"
                Width="100" />
        <Button Grid.Row="8"
                x:Name="GoBackBtn"
                Content="_Done"
                Padding="10,5"
                Background="White"
                Width="100"
                Margin="0,6,0,0"
                HorizontalAlignment="Center" />
    </Grid>
</UserControl>