<UserControl x:Class="OpinionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hw="http://schemas.hpod9.com/haley/wpf"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:models="clr-namespace:EZLogger.EZLogger.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="870"
             FontFamily="Candara" FontSize="14">

    <UserControl.Resources>
        <ObjectDataProvider x:Key="ReportTypeData"
                            ObjectType="{x:Type models:ReportTypeEntry}"
                            MethodName="GetReportTypes" />
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal">

        <StackPanel Height="450" Width="870">
            <Label Content="REPORT TYPES AND OPINIONS"
                   FontSize="24"
                   FontWeight="Bold"
                   FontStyle="Italic" />

            <DataGrid ItemsSource="{Binding Source={StaticResource ReportTypeData}}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      Margin="0,10,0,0"
                      Height="261">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Choice" Binding="{Binding Choice}" Width="127" />
                    <DataGridTextColumn Header="PC Code" Binding="{Binding PcCode}" Width="70" />
                    <DataGridTemplateColumn Header="Typical Wording" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TypicalWording}"
                       TextWrapping="Wrap"
                       Padding="4"
                       VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Height="55" Width="800" Orientation="Horizontal">
                <RadioButton Content="1372(a)(1)" Margin="6,6,6,6" Padding="6,6,6,6" VerticalAlignment="Center" Width="134" VerticalContentAlignment="Center"/>
                <RadioButton Content="1370(b)(1)" Padding="6,6,6,6" Width="134" VerticalContentAlignment="Center"/>
                <RadioButton Content="UNLIKELY 1370(b)(1)" Padding="6,6,6,6" Width="134" VerticalContentAlignment="Center"/>
                <RadioButton Content="UNLIKELY 1370(c)(1)" Padding="6,6,6,6" Width="134" VerticalContentAlignment="Center"/>
                <RadioButton Content="RadioButton" Padding="6,6,6,6" Width="134" VerticalContentAlignment="Center"/>
                <RadioButton Content="RadioButton" Padding="6,6,6,6" Width="134" VerticalContentAlignment="Center"/>
            </StackPanel>
        </StackPanel>

    </StackPanel>
</UserControl>
