<UserControl x:Name="OpinionView1"
             x:Class="OpinionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             d:DesignHeight="795"
             d:DesignWidth="595">
    <ScrollViewer>
        <StackPanel x:Name="OpinionExamplesStackPanel">
            <Label Content="REPORT TYPES AND OPINIONS"
                   FontFamily="Candara"
                   FontWeight="Bold"
                   FontStyle="Italic"
                   FontSize="24" />
            <TextBlock TextWrapping="Wrap"
                       Text="Instructions: Inspect the document and try to find one of the following opinion examples:"
                       FontFamily="Lucida Fax"
                       Padding="6,0,0,0"
                       FontSize="16" />
            <DataGrid Name="EvaluationCodeGrid"
                      HeadersVisibility="Column"
                      AutoGenerateColumns="False"
                      GridLinesVisibility="All"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      FontFamily="Segoe UI"
                      FontSize="13"
                      ColumnHeaderHeight="30"
                      RowHeight="60"
                      Margin="0,10,0,0"
                      Width="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Height="452">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Choice"
                                        Binding="{Binding Choice}"
                                        Width="150" />
                    <DataGridTextColumn Header="PC code"
                                        Binding="{Binding PCCode}"
                                        Width="120" />
                    <DataGridTextColumn Header="Typical wording"
                                        Binding="{Binding TypicalWording}"
                                        Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping"
                                        Value="Wrap" />
                                <Setter Property="Padding"
                                        Value="4" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                <DataGrid.Items>
                    <local:OpinionRow Choice="Competent"
                                      PCCode="1372(a)(1)"
                                      TypicalWording="“returned to cout as competent to stand trial”" />
                    <local:OpinionRow Choice="Not Yet Competent"
                                      PCCode="1370(a)(1)"
                                      TypicalWording="“not yet competent to stand trial”" />
                    <local:OpinionRow Choice="UNLIKELY 1370(b)(1)"
                                      PCCode="1370(b)(1)"
                                      TypicalWording="“not competent… no substantial likelihood… to regain competence in the foreseeable future”" />
                    <local:OpinionRow Choice="UNLIKELY 1370(c)(1)"
                                      PCCode="1370(c)(1)"
                                      TypicalWording="“not competent… no substantial likelihood… to regain competence… AND within 90 days of expiration”" />
                    <local:OpinionRow Choice="Retain and Treat"
                                      PCCode="1026/2972"
                                      TypicalWording="Select this if the patient is NOT being recommended for COT…" />
                    <local:OpinionRow Choice="Restored"
                                      PCCode="1026/2972"
                                      TypicalWording="Basically choose this if they are recommended for COT." />
                    <local:OpinionRow Choice="Malingering"
                                      PCCode="1370"
                                      TypicalWording="Select this if the report specifically states the patient is malingering." />
                </DataGrid.Items>
            </DataGrid>
            <TextBlock TextWrapping="Wrap"
                       Text="Select one of the types below based on the matching opinion phrases"
                       FontFamily="Lucida Fax"
                       FontSize="14" />
            <ListBox x:Name="OpinionListBox"
                     Height="100"
                     FontFamily="Lucida Console"
                     FontSize="14" />
            <StackPanel Height="100"
                        Orientation="Horizontal">
                <Button Content="Goto _First Page"
                        Height="30"
                        Width="115"
                        Margin="12,0,0,0"
                        Background="{x:Null}"
                        FontFamily="Candara"
                        FontSize="14" />
                <Button Content="Goto _Last Page"
                        Height="30"
                        Width="115"
                        Background="{x:Null}"
                        FontFamily="Candara"
                        Margin="12,0,0,0"
                        FontSize="14" />
                <Button Content="_Save Value"
                        Height="30"
                        Width="115"
                        Background="{x:Null}"
                        FontFamily="Candara"
                        Margin="12,0,0,0"
                        FontSize="14" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>