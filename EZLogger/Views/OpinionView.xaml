<UserControl x:Class="OpinionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hw="http://schemas.hpod9.com/haley/wpf"
             xmlns:controls="clr-namespace:EZLogger.EZLogger.Controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:models="clr-namespace:EZLogger.EZLogger.Models"
             mc:Ignorable="d"
             d:DesignHeight="395"
             d:DesignWidth="870"
             FontFamily="Candara"
             FontSize="14"
             Padding="0,0,-4,0">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="ReportTypeData"
                            ObjectType="{x:Type models:ReportTypeEntry}"
                            MethodName="GetReportTypes" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal">
        <StackPanel Height="395"
                    Width="870"
                    Background="White">
            <controls:FormHeaderControl HeaderText="OPINION AND TYPE OF REPORT" />
            <DataGrid ItemsSource="{Binding Source={StaticResource ReportTypeData}}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      Margin="6,10,6,0"
                      Height="261"
                      Background="White"
                      BorderBrush="Black"
                      Padding="6,0,6,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Choice"
                                        Binding="{Binding Choice}"
                                        Width="127" />
                    <DataGridTextColumn Header="PC Code"
                                        Binding="{Binding PcCode}"
                                        Width="70" />
                    <DataGridTemplateColumn Header="Typical Wording"
                                            Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TypicalWording}"
                                           TextWrapping="Wrap"
                                           Padding="4"
                                           VerticalAlignment="Center" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Height="55"
                        Width="850"
                        Orientation="Horizontal">
                <ComboBox x:Name="OpinionCbo"
                          Width="215"
                          Height="26"
                          FontFamily="Lucida Fax"
                          Margin="0,0,12,0">
                    <ComboBoxItem Content="1370(b)(1)" />
                    <ComboBoxItem Content="1372(a)(1)" />
                </ComboBox>
                <Button x:Name="BtnOpinionOk"
                        Margin="12,0,12,0"
                        Width="88"
                        Content="_OK"
                        BorderBrush="Gray"
                        Height="31"
                        Background="{x:Null}"
                        Cursor="Hand" />
                <Button x:Name="BtnOpinionFirstPage"
                        Width="88"
                        Content="_First Page"
                        BorderBrush="Gray"
                        Margin="12,0,12,0"
                        Height="31"
                        Background="{x:Null}"
                        Cursor="Hand" />
                <Button x:Name="BtnOpinionLastPage"
                        Width="88"
                        Content="_Last Page"
                        BorderBrush="Gray"
                        Height="31"
                        Background="{x:Null}"
                        Margin="12,0,12,0"
                        Cursor="Hand" />
                <Button x:Name="BtnClose"
                        Width="88"
                        Content="_Close"
                        BorderBrush="Gray"
                        Height="31"
                        Background="{x:Null}"
                        Margin="12,0,12,0"
                        Cursor="Hand" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>