<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
             x:Class="SaveFileView"
             FontFamily="Candara"
             FontSize="16"
             Width="400"
             Height="715"
             Background="White"
             Padding="12,1,0,0">
    <!-- Style block here -->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320"
                                      ShadowDepth="4"
                                      Opacity="0.5"
                                      BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,10,10,10"
                    Background="White"
                    Orientation="Vertical"
                    Height="705">
            <!-- Patient ID Search -->
            <Controls:FormHeaderControl HeaderText="RENAME AND SAVE FILE COPIES" />
            <GroupBox Header="Enter Patient ID"
                      Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal"
                            Margin="10">
                    <Button x:Name="SearchPatientIdBtn"
                            Content="_Search"
                            Width="100"
                            Margin="0,0,12,0"
                            Background="White" />
                    <TextBox x:Name="TxtPatientId"
                             Width="200"
                             Margin="0,0,10,0"
                             FontFamily="Lucida Console"
                             Padding="6,6,0,0"
                             FontSize="14" />
                </StackPanel>
            </GroupBox>
            <!-- Report Type -->
            <GroupBox Header="Report Type"
                      Margin="0,0,0,10">
                <ComboBox x:Name="ReportTypeCbo"
                          Margin="10"
                          Width="250"
                          Height="30"
                          FontFamily="Lucida Console"
                          IsEditable="True" />
            </GroupBox>
            <!-- Report Date -->
            <GroupBox Header="Report Date"
                      Margin="0,0,0,10">
                <DatePicker x:Name="ReportDatePicker"
                            Margin="10"
                            Width="200"
                            FontFamily="Lucida Console"
                            FontSize="14"
                            Padding="6,6,2,2" />
            </GroupBox>
            <!-- Patient Info -->
            <GroupBox Header="Patient Information"
                      Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Label x:Name="LblPatientName"
                           Content=""
                           FontFamily="Lucida Console" />
                    <Label x:Name="LblProgram"
                           Content=""
                           FontFamily="Lucida Console" />
                    <Label x:Name="LblUnit"
                           Content=""
                           FontFamily="Lucida Console" />
                    <Label x:Name="LblClassification"
                           Content=""
                           FontFamily="Lucida Console" />
                </StackPanel>
            </GroupBox>
            <!-- Radio Buttons: Move / Copy -->
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <RadioButton x:Name="RadioMove"
                             Content="Move File"
                             GroupName="FileAction"
                             Margin="0,0,20,0" />
                <RadioButton x:Name="RadioCopy"
                             Content="Copy File"
                             GroupName="FileAction" />
            </StackPanel>
            <!-- Show Path Button -->
            <Button x:Name="BtnShowPath"
                    Content="Show New _Path Below"
                    Width="200"
                    Height="30"
                    Margin="0,0,0,10"
                    Background="White" />
            <!-- New File Name -->
            <GroupBox Header="New File Name"
                      Margin="0,0,0,10"
                      Height="118">
                <TextBlock x:Name="TextBlockNewFileName"
                           Margin="10"
                           Text="Path will appear here..."
                           TextWrapping="Wrap"
                           FontFamily="Lucida Console" />
            </GroupBox>
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,10">
                <Button x:Name="BtnSaveAs"
                        Content="Save _As..."
                        Width="100"
                        Margin="12,0,10,0"
                        Background="White" />
                <Button x:Name="DoneBtn"
                        Content="_Done"
                        Width="100"
                        Background="White" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>