<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
             x:Class="SaveFileView"
             FontFamily="Candara"
             FontSize="16"
             Width="700"
             Height="470"
             Background="White"
             Padding="12,1,0,0">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320"
                                      ShadowDepth="4"
                                      Opacity="0.5"
                                      BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Main content -->
            <RowDefinition Height="Auto" />
            <!-- New File Name -->
            <RowDefinition Height="Auto" />
            <!-- Action Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Controls:FormHeaderControl Grid.Row="0" Grid.ColumnSpan="2"
                                    HeaderText="RENAME AND SAVE FILE COPIES" />

        <!-- Grid content section (2 columns, each using Grid not StackPanel) -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Patient ID -->
                <GroupBox Header="Enter Patient ID" Grid.Row="0" Margin="0,0,10,10">
                    <DockPanel Margin="10">
                        <Button x:Name="SearchPatientIdBtn"
                                Content="_Search"
                                Width="100"
                                Margin="0,0,12,0"
                                Background="White"
                                DockPanel.Dock="Left" />
                        <TextBox x:Name="TxtPatientId"
                                 Width="170"
                                 FontFamily="Lucida Console"
                                 Padding="6,6,0,0"
                                 FontSize="14" />
                    </DockPanel>
                </GroupBox>

                <!-- Report Type -->
                <GroupBox Header="Report Type" Grid.Row="1" Margin="0,0,10,10">
                    <ComboBox x:Name="ReportTypeCbo"
                              Margin="10"
                              Width="250"
                              Height="30"
                              FontFamily="Lucida Console"
                              IsEditable="True" />
                </GroupBox>

                <!-- Report Date -->
                <GroupBox Header="Report Date" Grid.Row="2" Margin="0,0,10,0">
                    <DatePicker x:Name="ReportDatePicker"
                                Margin="10"
                                Width="200"
                                FontFamily="Lucida Console"
                                FontSize="14"
                                Padding="6,6,2,2" />
                </GroupBox>
            </Grid>

            <!-- Right Column -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Patient Info -->
                <GroupBox Header="Patient Information" Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <Label x:Name="LblPatientName" FontFamily="Lucida Console" Background="#FFC1E0FF" Height="28" />
                        <Label x:Name="LblProgram" FontFamily="Lucida Console" Background="#FFC1E0FF" Height="23" />
                        <Label x:Name="LblUnit" FontFamily="Lucida Console" Background="#FFC1E0FF" Height="23" />
                        <Label x:Name="LblClassification" FontFamily="Lucida Console" Background="#FFC1E0FF" Height="23" />
                    </StackPanel>
                </GroupBox>

                <!-- Move/Copy -->
                <GroupBox Header="Action" Grid.Row="1" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal" Margin="10,2,10,6">
                        <RadioButton x:Name="RadioMove"
                                     Content="Move File"
                                     GroupName="FileAction"
                                     Margin="0,0,20,0" />
                        <RadioButton x:Name="RadioCopy"
                                     Content="Copy File"
                                     GroupName="FileAction" />
                    </StackPanel>
                </GroupBox>

                <!-- Show Path Button -->
                <Button x:Name="BtnShowPath"
                        Grid.Row="2"
                        Content="Show New _Path Below"
                        Width="200"
                        Height="30"
                        HorizontalAlignment="Left"
                        Margin="12,0,0,0"
                        Background="White" />
            </Grid>
        </Grid>

        <!-- New File Name -->
        <GroupBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Header="New File Name" Margin="0,10,0,0">
            <TextBlock x:Name="TextBlockNewFileName"
                       Margin="10"
                       Text="Path will appear here..."
                       TextWrapping="Wrap"
                       FontFamily="Lucida Console"
                       VerticalAlignment="Center" Background="#FFC1E0FF" Height="58" Padding="3,3,3,3" />
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button x:Name="BtnSaveAs"
                    Content="Save _As..."
                    Width="100"
                    Margin="12,0,10,0"
                    Background="White" />
            <Button x:Name="DoneBtn"
                    Content="_Done"
                    Width="100"
                    Background="White" />
        </StackPanel>
    </Grid>
</UserControl>
