<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
             x:Class="ReportTypeView"
             mc:Ignorable="d"
             d:DesignHeight="1023"
             Width="450"
             FontFamily="Candara"
             FontSize="14"
             Background="White"
             Margin="6,6,6,6">
    <ScrollViewer Margin="0,0,-20,0">
        <StackPanel>
            <Controls:FormHeaderControl HeaderText="CHOOSE A REPORT TYPE AND DUE DATES" />
            <StackPanel Orientation="Horizontal">
            <GroupBox Height="70"
                Header="Commitment Date"
                Width="200"
                BorderBrush="DarkGray" Margin="20,0,0,0">
                <Label x:Name="LabelCommitmentDate" Content="" HorizontalAlignment="Left" Margin="6,6,0,0" Width="150" Height="34" Background="#FFC1E0FF"/>
            </GroupBox>
                <GroupBox Height="70"
                          Header="Current Report Date"
                          Width="200"
                          BorderBrush="DarkGray"
                          Margin="12,0,12,0">
                    <DatePicker x:Name="CurrentReportDate" HorizontalAlignment="Left"
                                Width="165"
                                Height="31" FontSize="16" />
                </GroupBox>
            </StackPanel>
            <StackPanel Height="80"
                        Width="440"
                        Orientation="Horizontal">
                <StackPanel Height="80"
                            Width="220"
                            VerticalAlignment="Top">
                    <GroupBox Height="70"
                              Header="Report Type"
                              Width="200"
                              BorderBrush="DarkGray"
                              VerticalAlignment="Top">
                        <ComboBox x:Name="ReportTypeViewCbo"
                                  HorizontalAlignment="Left"
                                  Width="185"
                                  Height="31" />
                    </GroupBox>
                </StackPanel>
                <StackPanel Height="80"
                            Width="220"
                            VerticalAlignment="Top">
                    <Button x:Name="BtnSelectedType" 
                            Content="I Selected The Report Type"
                            Margin="12,24,12,12"
                            Height="31"
                            Background="{x:Null}"
                            Cursor="Hand" />
                </StackPanel>
            </StackPanel>
            <StackPanel Height="280"
                        Width="450"
                        Orientation="Horizontal">
                <StackPanel Height="280"
                            Width="220">
                    <GroupBox Height="70"
                              Header="90 Day Due Date"
                              Width="200"
                              BorderBrush="DarkGray">
                        <Label x:Name="LabelNinetyDay" Content="" HorizontalAlignment="Left" Margin="6,6,0,0" Width="150" Height="34" Background="#FFC1E0FF"/>
                    </GroupBox>
                    <GroupBox Height="70"
                              Header="9 Month Due Date"
                              Width="200"
                              BorderBrush="DarkGray">
                        <Label x:Name="LabelNineMonth" Content="" HorizontalAlignment="Left" Margin="6,6,0,0" Width="150" Height="34" Background="#FFC1E0FF"/>
                    </GroupBox>
                    <GroupBox Height="70"
                              Header="15 Month Due Date"
                              Width="200"
                              BorderBrush="DarkGray">
                        <Label x:Name="LabelFifteenMonth" Content="" HorizontalAlignment="Left" Margin="6,6,0,0" Width="150" Height="34" Background="#FFC1E0FF"/>
                    </GroupBox>
                    <GroupBox Height="70"
                              Header="21 Month Due Date"
                              Width="200"
                              BorderBrush="DarkGray">
                        <Label x:Name="LabelTwentyOneMonth" Content="" HorizontalAlignment="Left" Margin="6,6,0,0" Width="150" Height="34" Background="#FFC1E0FF"/>
                    </GroupBox>
                </StackPanel>
                <StackPanel Height="280"
                            Width="55">
                    <RadioButton Content="A"
                                 FontFamily="Consolas"
                                 FontWeight="Bold"
                                 FontSize="20"
                                 VerticalContentAlignment="Center"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Margin="0,32,0,0" />
                    <RadioButton Content="B"
                                 FontFamily="Consolas"
                                 FontWeight="Bold"
                                 FontSize="20"
                                 VerticalContentAlignment="Center"
                                 Margin="0,45,0,0"
                                 HorizontalAlignment="Left"
                                 HorizontalContentAlignment="Center" />
                    <RadioButton Content="C"
                                 FontFamily="Consolas"
                                 FontWeight="Bold"
                                 FontSize="20"
                                 VerticalContentAlignment="Center"
                                 Margin="0,50,0,0"
                                 HorizontalAlignment="Left" />
                    <RadioButton Content="D"
                                 FontFamily="Consolas"
                                 FontWeight="Bold"
                                 FontSize="20"
                                 VerticalContentAlignment="Center"
                                 Margin="0,48,0,0"
                                 HorizontalAlignment="Left" />
                </StackPanel>
                <StackPanel Height="280"
                            Width="175">
                    <Label x:Name="LabelEarly90" Content="* had early 90-day report"
                           Margin="0,32,6,6"
                           Background="#FFFFFFC0"
                           Foreground="Red"
                           FontWeight="Bold"
                           FontFamily="Times New Roman"
                           FontSize="14" />
                </StackPanel>
            </StackPanel>
            <StackPanel Height="75"
                        Width="450"
                        Orientation="Horizontal">
                <GroupBox Height="70"
                          Header="Current Due Date"
                          Width="200"
                          BorderBrush="DarkGray"
                          Margin="12,0,12,0">
                    <DatePicker HorizontalAlignment="Left"
                                Width="165"
                                Height="31" FontSize="16" />
                </GroupBox>
                <GroupBox Height="70"
                          Header="Next Due Date"
                          Width="200"
                          BorderBrush="DarkGray">
                    <DatePicker HorizontalAlignment="Left"
                                Width="165"
                                Height="31" FontSize="16" />
                </GroupBox>
            </StackPanel>
            <Frame Content="Calculating the First PPR Cycle Due Date"
                   Height="28"
                   Width="450"
                   NavigationUIVisibility="Hidden"
                   Margin="0,50,0,0"
                   FontSize="18"
                   VerticalContentAlignment="Center"
                   HorizontalContentAlignment="Center"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
            <Label Content="To get the first PPR due Date, add 6 months to the commitment date."
                   Height="28"
                   Width="425"
                   Background="#FFFFFFC0" />
            <StackPanel Height="100"
                        Width="445"
                        Orientation="Horizontal">
                <GroupBox Height="70"
                          Header="Commitment Date"
                          Width="135"
                          BorderBrush="DarkGray"
                          Margin="6,0,0,0">
                    <Label x:Name="LabelCommitmentDate2" Content=""
                           HorizontalAlignment="Center"
                           Width="97"
                           Height="31"
                           FontFamily="Consolas"
                           Padding="6,6,6,6"
                           Background="#FFC1E0FF" />
                </GroupBox>
                <Label Content="+ 6 months = "
                       Height="48"
                       Width="155"
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontFamily="Segoe Print"
                       FontSize="18" />
                <GroupBox Height="70"
                          Header="1st PPR Due Date"
                          Width="140"
                          BorderBrush="DarkGray">
                    <Label x:Name="LabelFirstDueDate" Content=""
                           HorizontalAlignment="Center"
                           Width="97"
                           Height="31"
                           FontFamily="Consolas"
                           Padding="6,6,6,6"
                           Background="#FFC1E0FF" />
                </GroupBox>
            </StackPanel>
            <StackPanel Height="100"
                        Width="445"
                        Orientation="Horizontal">
                <GroupBox Height="70"
                          Header="Current Due Date"
                          Width="135"
                          BorderBrush="DarkGray"
                          Margin="20,0,0,0">
                    <DatePicker x:Name="PickCurrentDueDate" HorizontalAlignment="Center"
                                Width="123"
                                Height="34" FontSize="16" />
                </GroupBox>
                <Button Content="&lt;&lt; Switch >>"
                        Height="38"
                        Width="93"
                        Margin="12,0,0,0"
                        Background="{x:Null}"
                        Cursor="Hand" />
                <GroupBox x:Name="GrpNextDueDate" Height="70"
                          Header="Next Due Date"
                          Width="135"
                          BorderBrush="DarkGray"
                          Margin="12,0,0,0">
                    <DatePicker x:Name="PickNextDueDate" HorizontalAlignment="Left"
                                Margin="3,0,0,0"
                                Width="120"
                                Height="34" FontSize="16" />
                </GroupBox>
            </StackPanel>
            <GroupBox Height="70"
                Header="Expiration Date"
                Width="135"
                BorderBrush="DarkGray"
                          >
                <Label x:Name="LabelMaxDate" Content=""
                    HorizontalAlignment="Center"
                    Width="97"
                    Height="31"
                    FontFamily="Consolas"
                    Padding="6,6,6,6"
                    Background="#FFC1E0FF" />
            </GroupBox>
            <Button Content="I made my choices and ready to continue"
                    Height="38"
                    Width="266"
                    Background="{x:Null}"
                    HorizontalAlignment="Center"
                    Margin="0,20,12,0"
                    Cursor="Hand" VerticalAlignment="Bottom" />
        </StackPanel>
    </ScrollViewer>
</UserControl>