<UserControl x:Class="SendEmailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             d:DesignHeight="220"
             d:DesignWidth="700"
             Background="White"
             FontFamily="Candara"
             FontSize="18">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320"
                                      ShadowDepth="4"
                                      Opacity="0.5"
                                      BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0"
                   Text="The file naming convention needs to be DSH-N -- LASTNAME, Firstname -- 1370(b)(1) report but this form will generate it for you if you fill in the boxes below."
                   TextWrapping="Wrap"
                   Margin="5"
                   FontWeight="SemiBold" />
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,10,0,0">
            <Button x:Name="SelectFileBtn"
                    Content="Select File"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Background="White" />
            <TextBox x:Name="TextBoxFilename"
                     Width="550"
                     Height="30"
                     IsReadOnly="True" />
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Left">
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Lastname" />
                <TextBox x:Name="TextBoxLastname"
                         Width="150" />
            </StackPanel>
            <StackPanel Margin="0,0,20,0">
                <TextBlock Text="Firstname" />
                <TextBox x:Name="TextBoxFirstname"
                         Width="150" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Select Report" />
                <StackPanel Orientation="Vertical">
                    <RadioButton x:Name="Radio1370b"
                                 Content="1370(b)"
                                 GroupName="ReportType"
                                 Tag="1370(b)(1)" />
                    <RadioButton x:Name="Radio1370c"
                                 Content="1370(c)"
                                 GroupName="ReportType"
                                 Tag="1370(c)(1)" />
                    <RadioButton x:Name="Radio1372a"
                                 Content="1372(a)"
                                 GroupName="ReportType"
                                 Tag="1372(a)(1)" />
                </StackPanel>
            </StackPanel>
            <Button x:Name="SendBtn"
                    Content="Send"
                    Width="80"
                    Height="60"
                    Margin="20,0,0,0"
                    VerticalAlignment="Bottom"
                    Background="White" />
        </StackPanel>
    </Grid>
</UserControl>