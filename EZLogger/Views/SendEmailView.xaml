<UserControl x:Class="SendEmailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hw="http://schemas.hpod9.com/haley/wpf"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             d:DesignHeight="175"
             d:DesignWidth="800"
             VerticalAlignment="Top"
             HorizontalAlignment="Left">
    <Grid Height="170"
          VerticalAlignment="Top"
          HorizontalAlignment="Center"
          Width="800" Background="White">
        <Button Content="Select File"
                HorizontalAlignment="Left"
                Margin="15,10,0,0"
                VerticalAlignment="Top"
                Width="72"
                Height="24"
                Background="{x:Null}" FontFamily="Candara" FontSize="14" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="100,7,0,0"
                   TextWrapping="Wrap"
                   Text="The file naming convention needs to be DSH-N -- LASTNAME, Firstname -- 1370(b)(1) report but this macro will create that for you if you fill-in the boxes below."
                   VerticalAlignment="Top"
                   FontFamily="Lucida Fax" FontSize="14" />
        <GroupBox HorizontalAlignment="Left"
                  Height="54"
                  Header="Filename"
                  VerticalAlignment="Top"
                  Width="770"
                  BorderBrush="DarkGray"
                  Margin="12,48,0,0" FontFamily="Candara" FontSize="14">
            <hw:PlainTextBox HorizontalAlignment="Left"
                     Height="20"
                     Margin="6,6,0,0"
                     TextWrapping="Wrap"
                     WaterMark="Select a file to see the Filename here"
                     Width="745"
                     Padding="1,1,0,0"
                     FontFamily="Lucida Sans" BorderBrush="Gray" Background="White" />
        </GroupBox>
        <GroupBox HorizontalAlignment="Left"
                  Height="54"
                  Header="Lastname"
                  VerticalAlignment="Top"
                  Width="263"
                  BorderBrush="DarkGray"
                  Margin="12,101,0,0" FontFamily="Candara" FontSize="14">
            <hw:PlainTextBox Height="20"
                     Margin="6,0,7,0"
                     TextWrapping="Wrap"
                     WaterMark="Lastname"
                     VerticalAlignment="Center"
                     Padding="1,1,0,0"
                     FontFamily="Lucida Sans" BorderBrush="Gray" Background="White" />
        </GroupBox>
        <GroupBox HorizontalAlignment="Left"
                  Height="54"
                  Header="Firstname"
                  VerticalAlignment="Top"
                  Width="263"
                  BorderBrush="DarkGray"
                  Margin="282,100,0,0" FontFamily="Candara" FontSize="14">
            <hw:PlainTextBox Height="20"
                     Margin="6,0,7,0"
                     TextWrapping="Wrap"
                     WaterMark="Firstname"
                     VerticalAlignment="Center"
                     Padding="1,1,0,0"
                     FontFamily="Lucida Sans" BorderBrush="Gray" Background="White" />
        </GroupBox>
        <GroupBox HorizontalAlignment="Left"
                  Height="64"
                  Header="Report Type"
                  VerticalAlignment="Top"
                  Width="148"
                  BorderBrush="DarkGray"
                  Margin="552,101,0,0" FontFamily="Candara" FontSize="14">
            <ComboBox HorizontalAlignment="Left"
                      Height="20"
                      Margin="8,0,0,0"
                      Width="115" />
        </GroupBox>
        <Button Content="Send"
                HorizontalAlignment="Left"
                Margin="703,116,0,0"
                VerticalAlignment="Top"
                Width="72"
                Height="24"
                Background="{x:Null}" FontFamily="Candara" FontSize="14" />
    </Grid>
</UserControl>