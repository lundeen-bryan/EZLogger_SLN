                      Margin="30,560,0,0"
                      VerticalAlignment="Top"
                      Width="205"
                      BorderBrush="DarkGray">
                <Label Content="06/15/2024"
                       HorizontalAlignment="Left"
                       Height="35"
                       Margin="6,6,6,6"
                       Width="180"
                       Background="#FFC1E0FF"
                       BorderBrush="Black"
                       FontFamily="Lucida Console"
                       Padding="12,12,12,12"
                       FontSize="14" />
            </GroupBox>
            <GroupBox HorizontalAlignment="Left"
                      Height="70"
                      Header="GroupBox"
                      Margin="30,630,0,0"
                      VerticalAlignment="Top"
                      Width="205"
                      BorderBrush="DarkGray">
