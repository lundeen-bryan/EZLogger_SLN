                   HorizontalAlignment="Left"
                   Height="295"
                   Margin="355,420,0,0"
                   VerticalAlignment="Top"
                   Width="250"
                   NavigationUIVisibility="Hidden"
                   Padding="6,6,6,6"
                   BorderBrush="DarkGray"
                   Background="#00000000"
