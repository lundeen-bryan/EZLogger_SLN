<UserControl x:Class="DueDateFormPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             Height="860"
             Width="645">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid Background="White"
              Margin="0,0,-5,-60" Width="645" Height="922">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="39*"/>
            </Grid.ColumnDefinitions>
            <Label Content="REPORT DATE CALCULATOR"
                   HorizontalAlignment="Left"
                   Margin="30,35,0,0"
                   VerticalAlignment="Top"
                   RenderTransformOrigin="0.526,-0.578"
                   FontFamily="Candara"
                   FontSize="24"
                   FontWeight="Bold"
                   FontStyle="Italic" Height="39" Width="287" />
            <Frame x:Name="DataEntryFrame"
                   Content="Data Entry"
                   HorizontalAlignment="Left"
                   Height="315"
                   Margin="10,90,0,0"
                   VerticalAlignment="Top"
                   Width="405"
                   BorderBrush="DarkGray"
                   Background="White"
                   BorderThickness="1,1,1,1"
                   NavigationUIVisibility="Hidden"
                   FontFamily="Candara"
                   FontSize="14"
                   Padding="6,6,0,0" />
            <GroupBox x:Name="CommitDateGroup"
                      HorizontalAlignment="Left"
                      Height="75"
                      Header="Commitment Date"
                      Margin="24,120,0,0"
                      VerticalAlignment="Top"
                      Width="180"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="14">
                <DatePicker HorizontalAlignment="Left"
                            Height="35"
                            Margin="6,6,6,6"
                            Width="140"
                            BorderBrush="DarkGray"
                            FontFamily="Lucida Console" Padding="6,6,6,6" />
            </GroupBox>
            <GroupBox x:Name="CurrentDueDateGroup"
                      HorizontalAlignment="Left"
                      Height="80"
                      Header="Current Due Date"
                      Margin="24,196,0,0"
                      VerticalAlignment="Top"
                      Width="180"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="14">
                <DatePicker HorizontalAlignment="Left"
                            Height="35"
                            Margin="6,6,6,6"
                            Width="145"
                            FontFamily="Lucida Console" Padding="6,6,6,6" />
            </GroupBox>
            <GroupBox x:Name="NextDueDateGroup"
                      HorizontalAlignment="Left"
                      Height="80"
                      Header="Next Due Date"
                      Margin="218,196,0,0"
                      VerticalAlignment="Top"
                      Width="180"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="14">
                <DatePicker HorizontalAlignment="Left"
                            Height="35"
                            Margin="6,6,6,6"
                            Width="140"
                            FontFamily="Lucida Console" Padding="6,6,6,6" />
            </GroupBox>
            <GroupBox x:Name="CurrentReportDateGroup"
                      HorizontalAlignment="Left"
                      Height="80"
                      Header="Current Report Date"
                      Margin="24,276,0,0"
                      VerticalAlignment="Top"
                      Width="180"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="14">
                <DatePicker HorizontalAlignment="Left"
                            Height="35"
                            Margin="6,6,6,6"
                            Width="145"
                            VerticalAlignment="Top"
                            FontFamily="Lucida Console" Padding="6,6,6,6" />
            </GroupBox>
            <GroupBox x:Name="ReportTypeGroup"
                      HorizontalAlignment="Left"
                      Height="115"
                      Header="Report Type"
                      Margin="218,276,0,0"
                      VerticalAlignment="Top"
                      Width="180"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="14">
                <Button Content="Button"
                        HorizontalAlignment="Left"
                        Height="30"
                        Margin="15,0,0,0"
                        Width="105"
                        VerticalAlignment="Bottom"
                        Background="White" />
            </GroupBox>
            <ComboBox HorizontalAlignment="Left"
                      Height="30"
                      Margin="232,300,0,0"
                      VerticalAlignment="Top"
                      Width="150"
                      RenderTransformOrigin="0.467,1"
                      FontFamily="Lucida Console"
                      FontSize="14" />
