<UserControl x:Class="PprDueDateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             FontFamily="Lucida Fax"
             FontSize="14"
             Background="White"
             Width="505"
             Height="795">
    <ScrollViewer>
        <StackPanel Margin="6,2,0,6"
                    Width="480">
            <StackPanel x:Name="ppr_stackpanel_1"
                        Height="205"
                        Width="463"
                        Margin="6,6,6,6"
                        HorizontalAlignment="Left">
                <Label Content="CONFIRM PPR DUE DATE"
                       Margin="6,6,6,6"
                       FontWeight="Bold"
                       FontStyle="Italic"
                       FontSize="24"
                       FontFamily="Candara" />
                <TextBlock TextWrapping="Wrap"
                           Text="Based on the dates in the blue boxes, enter the corresponding dates for the current and next reports in the whilte boxes."
                           Margin="6,6,6,6"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Padding="6,6,6,6"
                           Background="#FFFFFFC0"
                           FontFamily="Lucida Console" />
                <TextBlock TextWrapping="Wrap"
                           Text="*** Note that if this report is NOT a PPR, we typically enter tomorrow's date and 1-year later for the current and next due dates. (1026.2(L); 1026.2(b); etc."
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="6,6,6,6"
                           FontFamily="Lucida Console"
                           Background="#FFFFFFC0"
                           Padding="6,6,6,6" />
            </StackPanel>
            <StackPanel x:Name="ppr_stackpanel_2"
                        Height="307"
                        Width="463">
                <GroupBox Height="302"
                          Header="Calculating the first PPR cycle Due Date"
                          Width="460"
                          BorderBrush="#FF646464">
                    <StackPanel HorizontalAlignment="Left"
                                Height="284"
                                Margin="-2,0,0,0"
                                VerticalAlignment="Top"
                                Width="454">
                        <StackPanel Height="40"
                                    Width="450">
                            <TextBlock TextWrapping="Wrap"
                                       Text="To get the first PPR due datek add 6 months to the commitment date."
                                       Padding="6,6,6,6"
                                       FontFamily="Lucida Console"
                                       Background="#FFFFFFC0" />
                        </StackPanel>
                        <StackPanel Height="100"
                                    Width="450"
                                    Orientation="Horizontal">
                            <GroupBox Height="80"
                                      Header="Commitment Date"
                                      Width="150"
                                      Margin="6,0,0,0"
                                      BorderBrush="#FF646464">
                                <Label Content="01/12/2025"
                                       HorizontalAlignment="Center"
                                       Height="30"
                                       Margin="10,0,0,0"
                                       Width="120"
                                       Background="#FFC1E0FF"
                                       FontFamily="Lucida Console"
                                       VerticalAlignment="Center"
                                       Padding="12,8,5,5" />
                            </GroupBox>
                            <Label Content="+ 6 months ="
                                   Width="126"
                                   VerticalAlignment="Center"
                                   FontFamily="Segoe Print"
                                   FontSize="16"
                                   Margin="6,0,6,0"
                                   Padding="0,5,0,5"
                                   HorizontalAlignment="Center"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" />
                            <GroupBox Height="80"
                                      Header="1st PPR Due Date"
                                      Width="150"
                                      BorderBrush="#FF646464">
                                <Label Content="01/12/2025"
                                       HorizontalAlignment="Left"
                                       Height="30"
                                       Margin="14,0,0,0"
                                       Width="120"
                                       Background="#FFC1E0FF"
                                       FontFamily="Lucida Console"
                                       VerticalAlignment="Center"
                                       Padding="12,8,5,5" />
                            </GroupBox>
                        </StackPanel>
                        <StackPanel Height="40"
                                    Width="454">
                            <TextBlock TextWrapping="Wrap"
                                       Text="To get the first PPR due datek add 6 months to the commitment date."
                                       Padding="6,6,6,6"
                                       FontFamily="Lucida Console"
                                       Background="#FFFFFFC0" />
                        </StackPanel>
                        <StackPanel Height="100"
                                    Width="456">
                            <StackPanel Height="100"
                                        Width="450"
                                        Orientation="Horizontal">
                                <GroupBox Height="80"
                                          Header="Commitment Date"
                                          Width="150"
                                          Margin="6,0,0,0"
                                          BorderBrush="#FF646464">
                                    <Label Content="01/12/2025"
                                           HorizontalAlignment="Center"
                                           Height="30"
                                           Margin="10,0,0,0"
                                           Width="120"
                                           Background="#FFC1E0FF"
                                           FontFamily="Lucida Console"
                                           VerticalAlignment="Center"
                                           Padding="12,8,5,5" />
                                </GroupBox>
                                <Label Content="+ 6 months ="
                                       Width="126"
                                       VerticalAlignment="Center"
                                       FontFamily="Segoe Print"
                                       FontSize="16"
                                       Margin="6,0,6,0"
                                       Padding="0,5,0,5"
                                       HorizontalAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       VerticalContentAlignment="Center" />
                                <GroupBox Height="80"
                                          Header="1st PPR Due Date"
                                          Width="150"
                                          BorderBrush="#FF646464">
                                    <Label Content="01/12/2025"
                                           HorizontalAlignment="Left"
                                           Height="30"
                                           Margin="14,0,0,0"
                                           Width="120"
                                           Background="#FFC1E0FF"
                                           FontFamily="Lucida Console"
                                           VerticalAlignment="Center"
                                           Padding="12,8,5,5" />
                                </GroupBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <GroupBox Height="205"
                      Header="Data Entry"
                      Width="460"
                      BorderBrush="#FF646464">
                <StackPanel HorizontalAlignment="Left"
                            Height="180"
                            Margin="-3,0,0,0"
                            VerticalAlignment="Top"
                            Width="451">
                    <StackPanel Height="140"
                                Width="446"
                                Orientation="Horizontal">
                        <GroupBox Height="104"
                                  Header="Current PPR Due Date"
                                  Width="174"
                                  BorderBrush="#FF646464">
                            <DatePicker HorizontalAlignment="Left"
                                        Height="30"
                                        Margin="14,0,0,0"
                                        Width="130"
                                        FontFamily="Lucida Console">
                                <DatePicker.BorderBrush>
                                    <LinearGradientBrush EndPoint="0.5,0"
                                                         StartPoint="0.5,1">
                                        <GradientStop Color="#FFA3AEB9" />
                                        <GradientStop Color="#FF8399A9"
                                                      Offset="0.375" />
                                        <GradientStop Color="#FF718597"
                                                      Offset="0.375" />
                                        <GradientStop Color="#FF646464"
                                                      Offset="1" />
                                    </LinearGradientBrush>
                                </DatePicker.BorderBrush>
                            </DatePicker>
                        </GroupBox>
                        <Button Content="&lt;Switch>"
                                Height="28"
                                Width="99"
                                FontSize="14"
                                RenderTransformOrigin="0.5,0.5"
                                HorizontalContentAlignment="Center"
                                Background="White">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform />
                                    <RotateTransform Angle="-90" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </Button.RenderTransform>
                        </Button>
                        <GroupBox Height="104"
                                  Header="Next Due Date"
                                  Width="161"
                                  BorderBrush="#FF646464"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center">
                            <DatePicker HorizontalAlignment="Left"
                                        Height="30"
                                        Margin="14,0,0,0"
                                        Width="130"
                                        FontFamily="Lucida Console">
                                <DatePicker.BorderBrush>
                                    <LinearGradientBrush EndPoint="0.5,0"
                                                         StartPoint="0.5,1">
                                        <GradientStop Color="#FFA3AEB9" />
                                        <GradientStop Color="#FF8399A9"
                                                      Offset="0.375" />
                                        <GradientStop Color="#FF718597"
                                                      Offset="0.375" />
                                        <GradientStop Color="#FF646464"
                                                      Offset="1" />
                                    </LinearGradientBrush>
                                </DatePicker.BorderBrush>
                            </DatePicker>
                        </GroupBox>
                    </StackPanel>
                    <CheckBox Content="Use these dates as the current due date"
                              Height="25"
                              Width="324"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Bottom"
                              Margin="6,0,0,0" />
                </StackPanel>
            </GroupBox>
            <Button Content="Continue >>"
                    Height="30"
                    Width="95"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,23,12,0"
                    Background="White" />
        </StackPanel>
    </ScrollViewer>
</UserControl>