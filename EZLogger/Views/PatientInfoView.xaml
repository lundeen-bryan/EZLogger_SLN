<UserControl x:Class="EZLogger.Views.PatientInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hw="http://schemas.hpod9.com/haley/wpf"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             Height="745"
             Width="390"
             FontFamily="Candara"
             FontSize="14">

    <ScrollViewer HorizontalAlignment="Left"
                  VerticalAlignment="Top">

        <Grid HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Background="White">

            <Label Content="PATIENT INFO SAVED IN REPORT"
                   HorizontalAlignment="Center"
                   Margin="0,12,0,0"
                   VerticalAlignment="Top"
                   Width="348"
                   FontWeight="Bold"
                   FontStyle="Italic"
                   FontSize="24" />

            <Button x:Name="BtnRefresh" Content="Refresh List"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Margin="15,54,0,0"
                    VerticalAlignment="Top"
                    Width="115"
                    Height="24"
                    Background="{x:Null}"
                    BorderBrush="DarkGray"
                    AutomationProperties.AcceleratorKey="R" FontSize="16" />

            <Button x:Name="BtnValidate" Content="Validate Fields"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Margin="170,54,0,0"
                    VerticalAlignment="Top"
                    Width="115"
                    Height="24"
                    Background="{x:Null}"
                    BorderBrush="DarkGray"
                    AutomationProperties.AcceleratorKey="R"
                    Foreground="Red" FontSize="16" />

            <Button x:Name="BtnDelete" Content="Delete Selected
                    "
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Margin="15,86,0,0"
                    VerticalAlignment="Top"
                    Width="115"
                    Height="24"
                    Background="{x:Null}"
                    BorderBrush="DarkGray"
                    AutomationProperties.AcceleratorKey="R" FontSize="16" />

            <Button x:Name="BtnDeleteAll" Content="Delete All"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Margin="135,86,0,0"
                    VerticalAlignment="Top"
                    Width="75"
                    Height="24"
                    Background="{x:Null}"
                    BorderBrush="DarkGray"
                    AutomationProperties.AcceleratorKey="R" FontSize="16" />

            <Button x:Name="BtnAddEdit" Content="Add/Edit"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Margin="220,86,0,0"
                    VerticalAlignment="Top"
                    Width="65"
                    Height="24"
                    Background="{x:Null}"
                    BorderBrush="DarkGray"
                    AutomationProperties.AcceleratorKey="R" RenderTransformOrigin="0.917,0.583" FontSize="16" />

            <Button x:Name="BtnCopy" Content="_Copy"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Margin="216,120,0,0"
                    VerticalAlignment="Top"
                    Width="60"
                    Height="24"
                    Background="{x:Null}"
                    BorderBrush="DarkGray"
                    AutomationProperties.AcceleratorKey="R" FontSize="16" />

            <Button x:Name="BtnFirstPage" Content="_First Page"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Margin="15,120,0,0"
                    VerticalAlignment="Top"
                    Width="80"
                    Height="24"
                    Background="{x:Null}"
                    BorderBrush="DarkGray"
                    AutomationProperties.AcceleratorKey="R" FontSize="16" />

            <Button x:Name="BtnLastPage" Content="_Last Page"
                    Cursor="Hand"
                    HorizontalAlignment="Left"
                    Margin="115,120,0,0"
                    VerticalAlignment="Top"
                    Width="80"
                    Height="24"
                    Background="{x:Null}"
                    BorderBrush="DarkGray"
                    AutomationProperties.AcceleratorKey="R" FontSize="16" />

            <DataGrid x:Name="DataGridPtInfo"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="LightGray"
                      GridLinesVisibility="None"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      IsReadOnly="True"
                      Margin="12,160,12,0"
                      VerticalAlignment="Top"
                      Height="575"
                      RowHeaderWidth="0"
                      SelectionMode="Single"
                      SelectionUnit="FullRow" FontSize="16">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Property"
                                        Binding="{Binding PropertyName}"
                                        Width="*"
                                        FontWeight="Bold" />
                    <DataGridTextColumn Header="Value"
                                        Binding="{Binding Value}"
                                        Width="2*" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </ScrollViewer>
</UserControl>
