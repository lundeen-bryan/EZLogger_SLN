<UserControl x:Class="AboutEZLogger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d" d:DesignWidth="815" Height="515">
    <Grid Background="#FFFDFDFD">
        <Label Content="ABOUT EZ LOGGER" HorizontalAlignment="Left" Margin="17,15,0,0" VerticalAlignment="Top" Width="308" Height="50" FontFamily="Candara" FontSize="36" FontWeight="Bold" FontStyle="Italic"/>
        <local:ReadOnlyField HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="355" HeaderText="Created By" LabelText="Bryan Lundeen"/>
        <local:ReadOnlyField HorizontalAlignment="Left" Margin="10,145,0,0" VerticalAlignment="Top" LabelText="Bryan.Lundeen@dsh.ca.gov" HeaderText="Support Contact"/>
        <local:ReadOnlyField HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top" HeaderText="Last Update" LabelText="update version here"/>
        <local:ReadOnlyField HorizontalAlignment="Left" Margin="10,340,0,0" VerticalAlignment="Top" LabelText="version number here" HeaderText="Version"/>
        <GroupBox HorizontalAlignment="Left" Height="370" Header="Latest Changes" Margin="375,65,0,0" VerticalAlignment="Top" Width="415" BorderBrush="Black" FontFamily="Lucida Fax">
            <Label Content="Latest changes will go here" HorizontalAlignment="Left" Height="340" Margin="6,6,0,0" Width="390" VerticalAlignment="Top" Background="#FFC1E0FF"/>
        </GroupBox>
        <Button Content="_Help" HorizontalAlignment="Left" Margin="25,455,0,0" VerticalAlignment="Top" Height="35" Width="110" FontFamily="Candara" FontSize="14"/>
        <Button Content="_Config" HorizontalAlignment="Left" Margin="150,455,0,0" VerticalAlignment="Top" Height="35" Width="110" FontFamily="Candara" FontSize="14"/>
        <Button Content="_Alerts" HorizontalAlignment="Left" Margin="275,455,0,0" VerticalAlignment="Top" Height="35" Width="110" FontFamily="Candara" FontSize="14"/>
        <Button Content="Go _Back" HorizontalAlignment="Left" Margin="400,455,0,0" VerticalAlignment="Top" Height="35" Width="110" FontFamily="Candara" FontSize="14"/>
    </Grid>
</UserControl>
