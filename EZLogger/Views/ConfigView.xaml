<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
             x:Class="ConfigView"
             mc:Ignorable="d"
             d:DesignHeight="635"
             d:DesignWidth="800">
    <Grid Background="White">
        <Controls:FormHeaderControl HorizontalAlignment="Left"
                                    Margin="6,6,0,0"
                                    VerticalAlignment="Top"
                                    Width="500"
                                    FontFamily="Candara"
                                    FontSize="24"
                                    HeaderText="EZ LOGGER USER CONFIGURATION SETUP" />
        <TabControl FontFamily="Candara"
                    FontSize="14"
                    Margin="0,55,0,0">
            <TabItem Header="User Config">
                <Grid Background="White"
                      VerticalAlignment="Top">
                    <Frame Content="01. First Create the config file if it doesn't already exist"
                           HorizontalAlignment="Left"
                           Height="214"
                           Margin="7,10,0,0"
                           VerticalAlignment="Top"
                           Width="775"
                           NavigationUIVisibility="Hidden"
                           BorderBrush="DarkGray"
                           BorderThickness="1,1,1,1"
                           Padding="6,6,6,6" />
                    <Button x:Name="BtnCreateConfig" Content="_C"
                            HorizontalAlignment="Left"
                            Margin="17,35,0,0"
                            VerticalAlignment="Top"
                            Width="25"
                            Height="25"
                            Padding="3,3,3,3"
                            Background="{x:Null}" />
                    <Label Content="Click here to create the configuration files"
                           HorizontalAlignment="Left"
                           Margin="42,32,0,0"
                           VerticalAlignment="Top"
                           Width="355" />
                    <GroupBox HorizontalAlignment="Center"
                              Height="75"
                              Header="Local Configuration File"
                              Margin="0,58,0,0"
                              VerticalAlignment="Top"
                              Width="760"
                              BorderBrush="DarkGray">
                        <TextBlock x:Name="txtblock_local_config"
                                   HorizontalAlignment="Left"
                                   Margin="6,6,6,0"
                                   TextWrapping="Wrap"
                                   Width="729"
                                   Background="#FFC1E0FF" />
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Center"
                              Height="75"
                              Header="Global Configuration File"
                              Margin="0,139,0,0"
                              VerticalAlignment="Top"
                              Width="760"
                              BorderBrush="DarkGray">
                        <TextBlock x:Name="txtblock_global_config"
                                   HorizontalAlignment="Left"
                                   Margin="6,6,6,0"
                                   TextWrapping="Wrap"
                                   Width="729"
                                   Background="#FFC1E0FF" />
                    </GroupBox>
                    <Frame Content="02. Next you will select folders for the global and user configuration files. Either EDO or I drive and your local Documents folder."
                           HorizontalAlignment="Left"
                           Height="269"
                           Margin="7,235,0,0"
                           VerticalAlignment="Top"
                           Width="775"
                           NavigationUIVisibility="Hidden"
                           BorderBrush="DarkGray"
                           BorderThickness="1,1,1,1"
                           Padding="6,6,6,6" />
                    <GroupBox HorizontalAlignment="Left"
                              Height="75"
                              Header="EDO > Forensic Office:"
                              Margin="12,269,0,0"
                              VerticalAlignment="Top"
                              Width="760"
                              BorderBrush="DarkGray">
                        <TextBlock x:Name="txtblock_forensic_office"
                                   HorizontalAlignment="Left"
                                   Margin="6,6,6,0"
                                   TextWrapping="Wrap"
                                   Width="729"
                                   Background="#FFC1E0FF" />
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Left"
                              Height="75"
                              Header="Forensic Library"
                              Margin="12,344,0,0"
                              VerticalAlignment="Top"
                              Width="760"
                              BorderBrush="DarkGray">
                        <TextBlock x:Name="txtblock_forensic_library"
                                   HorizontalAlignment="Left"
                                   Margin="6,6,6,0"
                                   TextWrapping="Wrap"
                                   Width="729"
                                   Background="#FFC1E0FF" />
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Left"
                              Height="75"
                              Header="Forensic Database"
                              Margin="12,419,0,0"
                              VerticalAlignment="Top"
                              Width="760"
                              BorderBrush="DarkGray">
                        <TextBlock x:Name="txtblock_forensic_database"
                                   HorizontalAlignment="Left"
                                   Margin="6,6,6,0"
                                   TextWrapping="Wrap"
                                   Width="729"
                                   Background="#FFC1E0FF" />
                    </GroupBox>
                    <Button x:Name="BtnSaveConfig" Content="Sa_ve This Configuration"
                            HorizontalAlignment="Left"
                            Margin="634,512,0,0"
                            VerticalAlignment="Top"
                            Background="{x:Null}"
                            Padding="6,6,6,6" />
                </Grid>
            </TabItem>
            <TabItem Header="Patient Alerts">
                <Grid Background="White"
                      Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Instructions -->
                        <RowDefinition Height="*" />
                        <!-- ListBox -->
                        <RowDefinition Height="Auto" />
                        <!-- Buttons -->
                    </Grid.RowDefinitions>
                    <!-- Instructions -->
                    <TextBlock Grid.Row="0"
                               Text="Enter a new alert in the format: patientNumber=alertText&#xA;Example: 12345678=This patient requires mask protocol."
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"
                               FontSize="14" />
                    <!-- Alert List -->
                    <ListBox Grid.Row="1"
                             x:Name="AlertsListBox"
                             Margin="0,0,0,10"
                             FontFamily="Consolas"
                             FontSize="13" />
                    <!-- Buttons -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Button x:Name="AddAlertButton"
                                Content="Add"
                                Width="100"
                                Margin="10,0"
                                Background="{x:Null}" />
                        <Button x:Name="EditAlertButton"
                                Content="Edit"
                                Width="100"
                                Margin="10,0"
                                Background="{x:Null}" />
                        <Button x:Name="DeleteAlertButton"
                                Content="Delete"
                                Width="100"
                                Margin="10,0"
                                Background="{x:Null}" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="County Alerts">
                <Grid Background="White"
                      Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Instructions -->
                        <RowDefinition Height="*" />
                        <!-- ListBox -->
                        <RowDefinition Height="Auto" />
                        <!-- Buttons -->
                    </Grid.RowDefinitions>
                    <!-- Instructions -->
                    <TextBlock Grid.Row="0"
                               Text="Enter a new alert in the format: countyName=alertText&#xA;Example: Orange=This county is on modified alert protocol."
                               TextWrapping="Wrap"
                               Margin="0,0,0,10"
                               FontSize="14" />
                    <!-- County Alerts List -->
                    <ListBox Grid.Row="1"
                             x:Name="CountyAlertsListBox"
                             Margin="0,0,0,10"
                             FontFamily="Consolas"
                             FontSize="13" />
                    <!-- Buttons -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <Button x:Name="AddCountyAlertButton"
                                Content="Add"
                                Width="100"
                                Margin="10,0"
                                Background="{x:Null}" />
                        <Button x:Name="EditCountyAlertButton"
                                Content="Edit"
                                Width="100"
                                Margin="10,0"
                                Background="{x:Null}" />
                        <Button x:Name="DeleteCountyAlertButton"
                                Content="Delete"
                                Width="100"
                                Margin="10,0"
                                Background="{x:Null}" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Email Addresses">
                <Grid Background="White">
                    <GroupBox HorizontalAlignment="Left"
                              Height="75"
                              Header="Edit secretaries emails separated by semicolons (This is the daily report email distribution list)"
                              Margin="37,94,0,0"
                              VerticalAlignment="Top"
                              Width="745"
                              BorderBrush="DarkGray">
                        <TextBox HorizontalAlignment="Left"
                                 Height="30"
                                 Margin="6,0,0,0"
                                 TextWrapping="Wrap"
                                 Width="719"
                                 Background="#FFC1E0FF"
                                 IsReadOnly="True" />
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Left"
                              Height="75"
                              Header="Edit all the email addresses for everyone that should be notified on the Friday report"
                              Margin="37,174,0,0"
                              VerticalAlignment="Top"
                              Width="745"
                              BorderBrush="DarkGray">
                        <TextBox HorizontalAlignment="Left"
                                 Height="30"
                                 Margin="6,0,0,0"
                                 TextWrapping="Wrap"
                                 Width="719"
                                 Background="#FFC1E0FF"
                                 IsReadOnly="True" />
                    </GroupBox>
                    <GroupBox HorizontalAlignment="Left"
                              Height="75"
                              Header="Who should get a copy of every 1372 or UNLIKELY report?"
                              Margin="37,250,0,0"
                              VerticalAlignment="Top"
                              Width="745"
                              BorderBrush="DarkGray">
                        <TextBox HorizontalAlignment="Left"
                                 Height="30"
                                 Margin="6,0,0,0"
                                 TextWrapping="Wrap"
                                 Width="719"
                                 Background="#FFC1E0FF"
                                 IsReadOnly="True" />
                    </GroupBox>
                    <Label Content="Select the radio button next to the item you want to edit and press the edit button."
                           HorizontalAlignment="Left"
                           Margin="22,14,0,0"
                           VerticalAlignment="Top" />
                    <StackPanel HorizontalAlignment="Left"
                                Height="175"
                                Margin="7,129,0,0"
                                VerticalAlignment="Top"
                                Width="30">
                        <RadioButton x:Name="radio_secretaries"
                                     Content="" />
                        <RadioButton x:Name="radio_friday"
                                     Content=""
                                     Margin="0,65,0,0" />
                        <RadioButton x:Name="radio_competent"
                                     Content=""
                                     VerticalContentAlignment="Bottom"
                                     Margin="0,60,0,0" />
                    </StackPanel>
                    <Button x:Name="EditEmail" Content="Edit"
                            HorizontalAlignment="Left"
                            Margin="27,53,0,0"
                            VerticalAlignment="Top"
                            Width="100"
                            Background="{x:Null}" />
                </Grid>
            </TabItem>
            <TabItem Header="Doctors">
                <Grid HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Width="797"
                      Height="555">
                    <TextBlock HorizontalAlignment="Left"
                               Margin="47,39,0,0"
                               TextWrapping="Wrap"
                               Text="Edit the doctors list just like you edit a text file and then press the save button to save the new changes."
                               VerticalAlignment="Top"
                               FontSize="18"
                               Height="75"
                               Width="295" />
                    <TextBox x:Name="TextBoxDoctors"
                             HorizontalAlignment="Left"
                             Margin="377,39,0,0"
                             TextWrapping="Wrap"
                             Text="No File Loaded"
                             VerticalAlignment="Top"
                             Width="260"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             Height="490" />
                    <Button x:Name="BtnSaveDoctorsList"
                            Content="Save"
                            HorizontalAlignment="Left"
                            Margin="77,194,0,0"
                            VerticalAlignment="Top"
                            Width="100"
                            Height="31"
                            Background="{x:Null}" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>