<UserControl x:Class="UserConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             d:DesignHeight="935"
             d:DesignWidth="535"
             Padding="6,6,6,6">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Background="White"
              Height="935"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Width="545"
              Margin="12,0,0,0">
            <StackPanel HorizontalAlignment="Left"
                        Height="45"
                        VerticalAlignment="Top"
                        Width="500">
                <Label Content="USER CONFIGURATION SETUP FOR EZ LOGGER"
                       FontFamily="Candara"
                       FontWeight="Bold"
                       FontStyle="Italic"
                       FontSize="24"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="12,0,0,0" />
            </StackPanel>
            <StackPanel Margin="12,45,0,0"
                        Orientation="Horizontal"
                        Height="50"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Width="505">
                <Button Content="Edit _User Settings"
                        Height="36"
                        Width="149"
                        VerticalAlignment="Top"
                        Margin="6,6,6,6"
                        FontFamily="Lucida Fax"
                        FontSize="14"
                        Background="White" />
                <Button Content="Edit _Global Settings"
                        Height="36"
                        Width="149"
                        FontFamily="Lucida Fax"
                        FontSize="14"
                        Margin="6,6,6,6"
                        Background="White" />
                <Button Content="_EZ Logger"
                        Height="36"
                        Width="149"
                        FontFamily="Lucida Fax"
                        FontSize="14"
                        Margin="6,6,6,6"
                        Background="White" />
            </StackPanel>
            <Grid Margin="12,155,0,0"
                  Height="105"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Width="500">
                <Image HorizontalAlignment="Left"
                       Height="40"
                       Margin="6,6,6,6"
                       VerticalAlignment="Top"
                       Width="40"
                       Source="/EZLogger;component/Resources/number_1.png" />
                <Label Content="First you will create the config file if it doesn't already exist."
                       HorizontalAlignment="Left"
                       Margin="57,10,0,0"
                       VerticalAlignment="Top"
                       RenderTransformOrigin="0.132,0"
                       Width="438"
                       FontFamily="Lucida Fax"
                       FontSize="14" />
                <Button Content="_C"
                        HorizontalAlignment="Left"
                        Height="35"
                        Margin="35,60,0,0"
                        VerticalAlignment="Top"
                        Width="35"
                        Background="White"
                        FontFamily="Lucida Fax"
                        FontSize="14" />
                <Label Content="Click to create the configuration files"
                       HorizontalAlignment="Left"
                       Margin="82,64,0,0"
                       VerticalAlignment="Top"
                       Width="303"
                       FontFamily="Lucida Fax"
                       FontSize="14" />
            </Grid>
            <Grid Margin="12,270,-1,0"
                  Height="70"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Width="500">
                <Image HorizontalAlignment="Left"
                       Height="40"
                       Margin="6,6,6,6"
                       VerticalAlignment="Top"
                       Width="40"
                       Source="/EZLogger;component/Resources/number_2.png" />
                <TextBlock HorizontalAlignment="Left"
                           Margin="60,15,0,0"
                           TextWrapping="Wrap"
                           Text="Next you will select folders for the gloval and user configuration files to store. Either EDO or I drive and your Local Documents folder."
                           VerticalAlignment="Top"
                           Width="440"
                           FontFamily="Lucida Fax"
                           FontSize="14" />
            </Grid>
            <StackPanel Margin="12,95,0,0"
                        Orientation="Horizontal"
                        Height="50"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Width="500">
                <Button Content="_Save"
                        Height="36"
                        Width="149"
                        FontFamily="Lucida Fax"
                        FontSize="14"
                        Margin="6,6,6,6"
                        Background="White" />
                <Button Content="_Close"
                        Height="36"
                        Width="149"
                        FontFamily="Lucida Fax"
                        FontSize="14"
                        Margin="6,6,6,6"
                        Background="White" />
                <Button Content="_Update"
                        Height="36"
                        Width="149"
                        FontFamily="Lucida Fax"
                        FontSize="14"
                        Margin="6,6,6,6"
                        Background="White" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Left"
                        Height="585"
                        Margin="12,345,0,0"
                        VerticalAlignment="Top"
                        Width="495">
                <GroupBox Height="115"
                          Header="Local Configuration File"
                          Width="480"
                          BorderBrush="Black"
                          FontFamily="Lucida Fax"
                          FontSize="14">
                    <TextBlock HorizontalAlignment="Left"
                               Height="79"
                               Margin="6,0,0,0"
                               TextWrapping="Wrap"
                               Text="Test config this is a test and tesing again and the file path should be very long to test if this continue sto wrap"
                               Width="454"
                               VerticalAlignment="Center"
                               Background="#FFC1E0FF"
                               FontFamily="Lucida Console"
                               FontSize="14" />
                </GroupBox>
                <GroupBox Height="115"
                          Header="Global Configuration File"
                          Width="480"
                          BorderBrush="Black"
                          FontFamily="Lucida Fax"
                          FontSize="14">
                    <TextBlock HorizontalAlignment="Left"
                               Height="79"
                               Margin="6,0,0,0"
                               TextWrapping="Wrap"
                               Text="Test config this is a test and tesing again and the file path should be very long to test if this continue sto wrap"
                               Width="454"
                               VerticalAlignment="Center"
                               Background="#FFC1E0FF"
                               FontFamily="Lucida Console"
                               FontSize="14" />
                </GroupBox>
                <GroupBox Height="115"
                          Header="EDO > Forensic Office"
                          Width="480"
                          BorderBrush="Black"
                          FontFamily="Lucida Fax"
                          FontSize="14">
                    <TextBlock HorizontalAlignment="Left"
                               Height="79"
                               Margin="6,0,0,0"
                               TextWrapping="Wrap"
                               Text="Test config this is a test and tesing again and the file path should be very long to test if this continue sto wrap"
                               Width="454"
                               VerticalAlignment="Center"
                               Background="#FFC1E0FF"
                               FontFamily="Lucida Console"
                               FontSize="14" />
                </GroupBox>
                <GroupBox Height="115"
                          Header="Forensic Library"
                          Width="480"
                          BorderBrush="Black"
                          FontFamily="Lucida Fax"
                          FontSize="14">
                    <TextBlock HorizontalAlignment="Left"
                               Height="79"
                               Margin="6,0,0,0"
                               TextWrapping="Wrap"
                               Text="Test config this is a test and tesing again and the file path should be very long to test if this continue sto wrap"
                               Width="454"
                               VerticalAlignment="Center"
                               Background="#FFC1E0FF"
                               FontFamily="Lucida Console"
                               FontSize="14" />
                </GroupBox>
                <GroupBox Height="115"
                          Header="Forensic Database"
                          Width="480"
                          BorderBrush="Black"
                          FontFamily="Lucida Fax"
                          FontSize="14">
                    <TextBlock HorizontalAlignment="Left"
                               Height="79"
                               Margin="6,0,0,0"
                               TextWrapping="Wrap"
                               Text="Test config this is a test and tesing again and the file path should be very long to test if this continue sto wrap"
                               Width="454"
                               VerticalAlignment="Center"
                               Background="#FFC1E0FF"
                               FontFamily="Lucida Console"
                               FontSize="14" />
                </GroupBox>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>