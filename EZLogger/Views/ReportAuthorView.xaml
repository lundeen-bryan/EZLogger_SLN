<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
             x:Class="EZLogger.Views.ReportAuthorView"
             mc:Ignorable="d"
             d:DesignWidth="460"
             Height="595"
             FontFamily="Candara"
             FontSize="14">
    <StackPanel>
        <Controls:FormHeaderControl HeaderText="EVALUATOR AND AUTHOR INFORMATION"
                                    Margin="0,12,0,-4" />
        <TextBlock TextWrapping="Wrap"
                   Text="Begin by clicking the box below and typing the author's first name as it appears in the report's signature."
                   Padding="6,6,6,6"
                   FontFamily="Lucida Fax" />
        <GroupBox Height="95"
                  Header="Evaluator Name"
                  Width="449"
                  Padding="6,6,6,6"
                  Margin="6,6,6,6"
                  BorderBrush="DarkGray"
                  FontFamily="Lucida Fax">
            <ComboBox x:Name="CboAuthor"
                      HorizontalAlignment="Left"
                      Margin="9,0,0,0"
                      Width="395"
                      Height="31"
                      IsEditable="True"
                      BorderBrush="DarkGray">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0" />
                        <GradientStop Color="White"
                                      Offset="1" />
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
        </GroupBox>
        <TextBlock TextWrapping="Wrap"
                   Text="Type or paste the full name and title of the evaluator exactly as it appears on the report in the box below to add the author to the list."
                   FontFamily="Lucida Fax"
                   Padding="6,6,6,6"
                   Margin="0,10,0,0" />
        <GroupBox Height="95"
                  Header="Add Evaluator Name to List"
                  Width="449"
                  Padding="6,6,6,6"
                  BorderBrush="DarkGray"
                  FontFamily="Lucida Fax">
            <TextBox x:Name="TextBoxAuthor"
                     HorizontalAlignment="Left"
                     Margin="10,10,0,0"
                     TextWrapping="Wrap"
                     Width="390"
                     VerticalAlignment="Top"
                     Height="31"
                     Padding="6,6,6,6" />
        </GroupBox>
        <Button x:Name="BtnAddAuthor"
                Content="_Add New Author"
                Width="125"
                Margin="0,6,0,0"
                Height="31"
                Background="{x:Null}"
                FontSize="16" />
        <GroupBox Height="74"
                  Header="Go To"
                  Width="448"
                  Padding="6,6,6,6"
                  BorderBrush="Gray"
                  FontFamily="Lucida Fax"
                  Margin="0,6,0,0">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnAuthorFirstPage"
                        Content="_First Page"
                        Height="31"
                        Width="162"
                        Margin="24,0,24,0"
                        Background="{x:Null}"
                        FontFamily="Candara"
                        FontSize="16" />
                <Button x:Name="BtnAuthorLastPage"
                        Content="_Last Page"
                        Width="162"
                        Height="31"
                        Margin="24,0,0,0"
                        Background="{x:Null}"
                        FontFamily="Candara"
                        FontSize="16" />
            </StackPanel>
        </GroupBox>
        <Button x:Name="BtnAuthorDone"
                Content="_Done Selecting"
                Background="{x:Null}"
                Width="162"
                Height="31"
                Margin="0,12,0,24"
                FontSize="16" />
        <Button x:Name="DoneBtn"
            Content="_Done"
            Background="{x:Null}"
            Width="162"
            Height="31"
            FontSize="16" />
    </StackPanel>
</UserControl>