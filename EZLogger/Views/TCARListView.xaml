<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
             x:Class="TcarListView"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="600"
             Background="#FFFDFDFD">
    <!-- Style block here -->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320"
                                      ShadowDepth="4"
                                      Opacity="0.5"
                                      BlurRadius="8" />
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- NEW: Header row -->
            <RowDefinition Height="*" />
            <!-- DataGrid row -->
            <RowDefinition Height="Auto" />
            <!-- Footer/buttons row -->
        </Grid.RowDefinitions>
        <!-- HEADER ROW -->
        <Controls:FormHeaderControl HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    HeaderText="TCAR LIST" />
        <!-- DATAGRID ROW -->
        <DataGrid x:Name="TCARGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  FontSize="16"
                  RowHeight="30"
                  AlternatingRowBackground="LightGray"
                  AlternationCount="2"
                  GridLinesVisibility="Horizontal"
                  FontFamily="Lucida Fax">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Patient Name"
                                    Binding="{Binding PatientName}"
                                    Width="*" />
                <DataGridTextColumn Header="Patient Number"
                                    Binding="{Binding Casenum}"
                                    Width="*" />
                <DataGridTextColumn Header="Submitted Date"
                                    Binding="{Binding Subdate}"
                                    Width="*" />
                <DataGridTextColumn Header="Assigned To"
                                    Binding="{Binding AssignedTo}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <!-- BUTTONS + INSTRUCTIONS ROW -->
        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    Margin="0,15,0,0">
            <TextBlock Text="Please select a patient from the list or press the close button if the patient is not found."
                       Margin="0,0,0,10"
                       FontSize="18"
                       TextWrapping="Wrap"
                       FontFamily="Candara" />
            <StackPanel Height="30"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="_Select"
                        Width="100"
                        Padding="10,5"
                        Click="BtnSelectPatient_Click"
                        Background="White"
                        Margin="0,0,24,0"
                        FontFamily="Candara"
                        FontSize="18" />
                <Button x:Name="DoneBtn"
                        Content="_Done"
                        Width="100"
                        Padding="10,5"
                        Background="White"
                        FontFamily="Candara"
                        FontSize="18" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>