<UserControl xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"  x:Class="DueDates1370View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="365" FontFamily="Candara" FontSize="18" Background="White">
    <Grid>
        <StackPanel><Controls:FormHeaderControl HeaderText="DUE DATES FOR 1370 REPORTS" /></StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Height="375" Width="180" VerticalAlignment="Top" Margin="0,75,0,0">
                <GroupBox Height="75" Header="90 Day Due Date" BorderBrush="DarkGray" Width="164" HorizontalAlignment="Left" Margin="6,0,0,0">
                    <Label Content="Label" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" Width="140" Height="37" Background="#FFC1E0FF" FontFamily="Lucida Console" FontSize="16"/>
                </GroupBox>
                <GroupBox Height="75" Header="9 Month Due Date" BorderBrush="DarkGray" Width="164" HorizontalAlignment="Left" Margin="6,0,0,0">
                    <Label Content="Label" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" Width="140" Height="37" Background="#FFC1E0FF" FontFamily="Lucida Console" FontSize="16"/>
                </GroupBox>
                <GroupBox Height="75" Header="15 Month Due Date" BorderBrush="DarkGray" Width="164" HorizontalAlignment="Left" Margin="6,0,0,0">
                    <Label Content="Label" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" Width="140" Height="37" Background="#FFC1E0FF" FontFamily="Lucida Console" FontSize="16"/>
                </GroupBox>
                <GroupBox Height="75" Header="21 Month Due Date" BorderBrush="DarkGray" Width="164" HorizontalAlignment="Left" Margin="6,0,0,0">
                    <Label Content="Label" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" Width="140" Height="37" Background="#FFC1E0FF" FontFamily="Lucida Console" FontSize="16"/>
                </GroupBox>
            </StackPanel>
            <StackPanel Height="375" Width="185" VerticalAlignment="Top" Margin="0,75,0,0">
                <RadioButton Content="_A" Margin="0,35,0,0" FontFamily="Lucida Console" FontWeight="Bold" FontSize="24"/>
                <RadioButton Content="_B" Margin="0,55,0,0" FontFamily="Lucida Console" FontWeight="Bold" FontSize="24"/>
                <RadioButton Content="_C" Margin="0,50,0,0" FontFamily="Lucida Console" FontWeight="Bold" FontSize="24"/>
                <RadioButton Content="_D" Margin="0,50,0,0" FontFamily="Lucida Console" FontWeight="Bold" FontSize="24"/>
                <Button x:Name="Save1370ChoiceBtn" Content="Save Choice" Background="{x:Null}" Margin="0,50,12,0"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
