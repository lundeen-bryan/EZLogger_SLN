<UserControl
    x:Class="EvaluatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:EZLogger"
    xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
    mc:Ignorable="d"
    d:DesignHeight="655"
    d:DesignWidth="500"
    Background="White">

    <Grid HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Row -->
        <Controls:FormHeaderControl Grid.Row="0"
                                    HorizontalAlignment="Left"
                                    Margin="10"
                                    HeaderText="CHOOSE THE AUTHOR OF THE REPORT" />

        <!-- Main Content Area -->
        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Left"
                    Margin="10"
                    Width="460">

            <TextBlock TextWrapping="Wrap"
                       Text="Begin by clicking the box below and typing the author's first name as it appears in the report's signature."
                       FontFamily="Candara"
                       FontSize="18"
                       Padding="6" />

            <GroupBox Header="Evaluator Name"
                      Height="95"
                      Width="449"
                      Padding="6"
                      Margin="0,10,0,0"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="18">
                <ComboBox x:Name="AuthorCbo"
                          HorizontalAlignment="Left"
                          Margin="9,0,0,0"
                          Width="395"
                          Height="31"
                          IsEditable="True"
                          BorderBrush="DarkGray">
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0" />
                            <GradientStop Color="White" Offset="1" />
                        </LinearGradientBrush>
                    </ComboBox.Background>
                </ComboBox>
            </GroupBox>

            <TextBlock TextWrapping="Wrap"
                       Text="Type or paste the full name and title of the evaluator exactly as it appears on the report in the box below to add the author to the list."
                       FontFamily="Candara"
                       FontSize="18"
                       Padding="6"
                       Margin="0,10,0,0" />

            <GroupBox Header="Add Evaluator Name to List"
                      Height="95"
                      Width="449"
                      Padding="6"
                      Margin="0,10,0,0"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="18">
                <TextBox x:Name="TextBoxAuthor"
                         HorizontalAlignment="Left"
                         Margin="10,10,0,0"
                         TextWrapping="Wrap"
                         Width="390"
                         Height="31"
                         Padding="6" />
            </GroupBox>

            <Button x:Name="BtnAddAuthor"
                    Content="_Add New Author"
                    Width="150"
                    Height="31"
                    Margin="30,10,0,0"
                    Background="{x:Null}"
                    FontSize="18"
                    FontFamily="Candara" HorizontalAlignment="Left" />

            <GroupBox Header="Go To"
                      Height="74"
                      Width="448"
                      Padding="6"
                      Margin="0,10,0,0"
                      BorderBrush="Gray"
                      FontFamily="Candara"
                      FontSize="18">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            x:Name="BtnAuthorFirstPage"
                            Content="_First Page"
                            Height="31"
                            Margin="10,0"
                            Background="{x:Null}"
                            FontFamily="Candara"
                            FontSize="18" />
                    <Button Grid.Column="1"
                            x:Name="BtnAuthorLastPage"
                            Content="_Last Page"
                            Height="31"
                            Margin="10,0,0,0"
                            Background="{x:Null}"
                            FontFamily="Candara"
                            FontSize="18" />
                </Grid>
            </GroupBox>

            <Button x:Name="BtnAuthorDone"
                    Content="_Done Selecting"
                    Width="162"
                    Height="31"
                    Margin="30,12,0,0"
                    Background="{x:Null}"
                    FontSize="16"
                    FontFamily="Candara" HorizontalAlignment="Left" />

            <Button x:Name="DoneBtn"
                    Content="_Done"
                    Width="162"
                    Height="31"
                    Margin="30,12,0,24"
                    Background="{x:Null}"
                    FontSize="16"
                    FontFamily="Candara" HorizontalAlignment="Left" />
        </StackPanel>
    </Grid>
</UserControl>
