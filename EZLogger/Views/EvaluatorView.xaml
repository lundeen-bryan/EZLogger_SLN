<UserControl
    x:Class="EvaluatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EZLogger"
    xmlns:Controls="clr-namespace:EZLogger.EZLogger.Controls"
    mc:Ignorable="d"
    d:DesignHeight="635"
    d:DesignWidth="500"
    Background="White">
    <!-- Style block here-->
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="320"
                                      ShadowDepth="4"
                                      Opacity="0.5"
                                      BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Controls:FormHeaderControl 
            Grid.Row="0"
            HorizontalAlignment="Left"
            Margin="10"
            HeaderText="CHOOSE THE AUTHOR OF THE REPORT" />

        <!-- Body -->
        <Grid Grid.Row="1"
              Margin="10"
              HorizontalAlignment="Left"
              Width="460">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Instruction 1 -->
                <RowDefinition Height="Auto"/>
                <!-- ComboBox -->
                <RowDefinition Height="Auto"/>
                <!-- Instruction 2 -->
                <RowDefinition Height="Auto"/>
                <!-- TextBox -->
                <RowDefinition Height="Auto"/>
                <!-- Add Author Btn+Lbl -->
                <RowDefinition Height="Auto"/>
                <!-- First Page Btn+Lbl -->
                <RowDefinition Height="Auto"/>
                <!-- Last Page Btn+Lbl -->
                <RowDefinition Height="Auto"/>
                <!-- Save Btn+Lbl -->
                <RowDefinition Height="Auto"/>
                <!-- Done Btn+Lbl -->
                <RowDefinition Height="*"   />
                <!-- Spacer -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <!-- Buttons -->
                <ColumnDefinition Width="*" />
                <!-- Labels -->
            </Grid.ColumnDefinitions>

            <!-- Instructions -->
            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       TextWrapping="Wrap"
                       Text="Begin by clicking the box below and typing the author's first name as it appears in the report's signature."
                       FontFamily="Candara"
                       FontSize="18"
                       Padding="6" />

            <!-- ComboBox -->
            <GroupBox Grid.Row="1" Grid.ColumnSpan="2"
                      Header="Evaluator Name"
                      Height="95"
                      Width="449"
                      Padding="6"
                      Margin="0,10,0,0"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="18">
                <ComboBox x:Name="AuthorCbo"
                          HorizontalAlignment="Left"
                          Margin="9,0,0,0"
                          Width="395"
                          Height="31"
                          IsEditable="True"
                          BorderBrush="DarkGray">
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0" />
                            <GradientStop Color="White" Offset="1" />
                        </LinearGradientBrush>
                    </ComboBox.Background>
                </ComboBox>
            </GroupBox>

            <!-- Second Instruction -->
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                       TextWrapping="Wrap"
                       Text="Type or paste the full name and title of the evaluator exactly as it appears on the report in the box below to add the author to the list."
                       FontFamily="Candara"
                       FontSize="18"
                       Padding="6"
                       Margin="0,10,0,0" />

            <!-- TextBox -->
            <GroupBox Grid.Row="3" Grid.ColumnSpan="2"
                      Header="Add Evaluator Name to List"
                      Height="95"
                      Width="449"
                      Padding="6"
                      Margin="0,10,0,0"
                      BorderBrush="DarkGray"
                      FontFamily="Candara"
                      FontSize="18">
                <TextBox x:Name="TextBoxAuthor"
                         HorizontalAlignment="Left"
                         Margin="10,10,0,0"
                         TextWrapping="Wrap"
                         Width="390"
                         Height="31"
                         Padding="6" />
            </GroupBox>

            <!-- Buttons + Labels -->

            <Button Grid.Row="4" Grid.Column="0"
                    x:Name="BtnAddAuthor"
                    Content="_A"
                    Width="33"
                    Height="31"
                    Margin="0,10,0,0"
                    Background="White"
                    FontSize="18"
                    FontFamily="Candara"
                    HorizontalAlignment="Left" />
            <Label Grid.Row="4" Grid.Column="1"
                   Content="Add New Author"
                   FontFamily="Candara"
                   FontSize="18"
                   VerticalAlignment="Center" />

            <Button Grid.Row="5" Grid.Column="0"
                    x:Name="BtnAuthorFirstPage"
                    Content="_F"
                    Width="33"
                    Height="31"
                    Margin="0,4,0,0"
                    Background="White"
                    FontSize="18"
                    FontFamily="Candara"
                    HorizontalAlignment="Left" />
            <Label Grid.Row="5" Grid.Column="1"
                   Content="First Page"
                   FontFamily="Candara"
                   FontSize="18"
                   VerticalAlignment="Center" />

            <Button Grid.Row="6" Grid.Column="0"
                    x:Name="BtnAuthorLastPage"
                    Content="_L"
                    Width="33"
                    Height="31"
                    Margin="0,4,0,0"
                    Background="White"
                    FontSize="18"
                    FontFamily="Candara"
                    HorizontalAlignment="Left" />
            <Label Grid.Row="6" Grid.Column="1"
                   Content="Last Page"
                   FontFamily="Candara"
                   FontSize="18"
                   VerticalAlignment="Center" />

            <Button Grid.Row="7" Grid.Column="0"
                    x:Name="BtnAuthorDone"
                    Content="_S"
                    Width="33"
                    Height="31"
                    Margin="0,10,0,0"
                    Background="White"
                    FontSize="16"
                    FontFamily="Candara"
                    HorizontalAlignment="Left" />
            <Label Grid.Row="7" Grid.Column="1"
                   Content="Save Selection"
                   FontFamily="Candara"
                   FontSize="18"
                   VerticalAlignment="Center" />

            <Button Grid.Row="8" Grid.Column="0"
                    x:Name="DoneBtn"
                    Content="_D"
                    Width="33"
                    Height="31"
                    Margin="0,10,0,0"
                    Background="White"
                    FontSize="16"
                    FontFamily="Candara"
                    HorizontalAlignment="Left" />
            <Label Grid.Row="8" Grid.Column="1"
                   Content="Done"
                   FontFamily="Candara"
                   FontSize="18"
                   VerticalAlignment="Center" />

        </Grid>
    </Grid>
</UserControl>
