<UserControl x:Class="ReportWizardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hw="http://schemas.hpod9.com/haley/wpf"
             xmlns:hm="http://schemas.hpod9.com/haley/mvvm"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="795">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/EZLogger;component/Resources/EzLoggerRD.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White" Margin="0,0,-5,0">
        <GroupBox Header="02. Patient Number (Lucida Fax 12pt)" Margin="10,100,0,0" VerticalAlignment="Top" FontFamily="Lucida Fax" Height="80" BorderBrush="Black" Foreground="#FF464646" HorizontalAlignment="Left" Width="335">
            <TextBox HorizontalAlignment="Left" Height="40" Margin="15,0,0,0" TextWrapping="Wrap" Text="Enter Patient Number Here" Width="300" FontFamily="Consolas" FontSize="14" Padding="5,5,5,5" BorderBrush="#FF646464"/>
        </GroupBox>
        <GroupBox Header="03. Confirm Patient Match with Database" Margin="10,185,0,0" VerticalAlignment="Top" FontFamily="Lucida Fax" Height="80" BorderBrush="Black" Foreground="#FF464646" HorizontalAlignment="Left" Width="335">
            <Button Content="View Database" HorizontalAlignment="Left" Margin="16,10,0,0" VerticalAlignment="Top" Height="30" Width="134" Padding="1,1,1,1" Background="#FFF0F0F0" Foreground="#FF464646" FontFamily="Candara" FontSize="14"/>
        </GroupBox>
        <GroupBox Header="01. Patient Name (Lucida Fax 12pt)" Margin="10,15,0,0" VerticalAlignment="Top" FontFamily="Lucida Fax" Height="80" BorderBrush="Black" Foreground="#FF464646" HorizontalAlignment="Left" Width="335">
            <Label Content="Patient Name Here (Consolas 14pt)" HorizontalAlignment="Left" Margin="15,0,0,0" Height="40" Width="300" RenderTransformOrigin="0.495,-1.075" Background="#FFC1E0FF" FontFamily="Consolas" FontSize="14" BorderBrush="#FF646464" BorderThickness="1,1,1,1" Foreground="#FF464646"/>
        </GroupBox>
    </Grid>
</UserControl>
