<UserControl x:Class="EZLogger.Controls.FormHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Label Content="{Binding HeaderText, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="6,6,0,0" FontFamily="Candara" FontSize="24" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Top"/>
</UserControl>
