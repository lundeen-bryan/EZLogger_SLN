<UserControl x:Class="CustomMsgBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Black">
    <Border BorderThickness="2"
            BorderBrush="White"
            Padding="10">
        <StackPanel>
            <!-- Message text -->
            <TextBlock x:Name="MessageText"
                       TextWrapping="Wrap"
                       MaxWidth="500"
                       FontSize="14"
                       FontFamily="Consolas"
                       Foreground="Lime"
                       Margin="5" />
            <!-- Button panel -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10,20,10,0">
                <Button x:Name="YesButton"
                        Content="_Yes"
                        Width="75"
                        Margin="5" />
                <Button x:Name="NoButton"
                        Content="_No"
                        Width="75"
                        Margin="5" />
                <Button x:Name="OkButton"
                        Content="_OK"
                        Width="75"
                        Margin="5" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>