<UserControl x:Class="ApprovedByControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             d:DesignHeight="465"
             d:DesignWidth="440">
    <Grid>
        <Label Content="CHEIF APPROVAL AND SIGNATURE"
               HorizontalAlignment="Center"
               Margin="0,6,0,0"
               VerticalAlignment="Top"
               Width="428"
               FontFamily="Candara"
               FontSize="28"
               FontWeight="Bold"
               FontStyle="Italic" />
        <Label Content="1"
               HorizontalAlignment="Left"
               Margin="17,40,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.263,0.193"
               FontFamily="Castellar"
               FontSize="26"
               FontWeight="Bold" />
        <ListBox HorizontalAlignment="Left"
                 Height="96"
                 Margin="25,105,0,0"
                 VerticalAlignment="Top"
                 Width="230"
                 d:ItemsSource="{d:SampleData ItemCount=5}"
                 FontFamily="Candara"
                 FontSize="16"
                 BorderBrush="DarkGray" />
        <Label Content="2"
               HorizontalAlignment="Left"
               Margin="15,212,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.263,0.193"
               FontFamily="Castellar"
               FontSize="26"
               FontWeight="Bold" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="45,208,0,0"
                   TextWrapping="Wrap"
                   Text="Select the place in the document where you want to insert the signature. You should select the table/paragraph where the medical directors name is typed. Then press insert sig."
                   VerticalAlignment="Top"
                   Height="114"
                   Width="385"
                   FontFamily="Candara"
                   FontSize="18"
                   Padding="5,5,5,5" />
        <Label Content="3"
               HorizontalAlignment="Left"
               Margin="17,366,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.263,0.193"
               FontFamily="Castellar"
               FontSize="24"
               FontWeight="Bold"
               Height="44" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="50,365,0,0"
                   TextWrapping="Wrap"
                   Text="While the doctor is still selected, press the Approved by button"
                   VerticalAlignment="Top"
                   Height="51"
                   Width="320"
                   FontFamily="Candara"
                   FontSize="18" />
        <Button Content="_Insert Signature"
                HorizontalAlignment="Left"
                Margin="25,330,0,0"
                VerticalAlignment="Top"
                Padding="6,6,6,6"
                Height="35"
                Background="White" FontSize="14" />
        <Button Content="_Approved by"
                HorizontalAlignment="Left"
                Margin="25,380,0,12"
                VerticalAlignment="Bottom"
                Padding="6,6,6,6"
                Height="35"
                Width="97"
                Background="White" FontSize="14" />
        <Button Content="Go _Back"
                HorizontalAlignment="Right"
                Margin="315,380,12,12"
                VerticalAlignment="Bottom"
                Padding="6,6,6,6"
                Width="97"
                Height="35"
                Background="White" FontSize="14" />
        <TextBlock HorizontalAlignment="Left"
                   Margin="41,50,0,0"
                   TextWrapping="Wrap"
                   Text="Select the name of the senior that approved the report."
                   VerticalAlignment="Top"
                   FontFamily="Candara"
                   FontSize="18" Width="379" />
    </Grid>
</UserControl>