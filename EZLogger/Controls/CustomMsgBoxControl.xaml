<UserControl x:Class="EZLogger.CustomMsgBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="345"
             Width="490">
    <Grid Background="White">
        <TextBlock HorizontalAlignment="Left"
                   Height="255"
                   Margin="10,5,0,0"
                   TextWrapping="Wrap"
                   Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Top"
                   Width="470"
                   Background="Black"
                   Foreground="#FF08FF00"
                   FontFamily="Lucida Console"
                   FontSize="20"
                   Padding="6,6,6,6" />
        <Button Content="Yes"
                HorizontalAlignment="Left"
                Margin="25,280,0,0"
                VerticalAlignment="Top"
                Height="45"
                Width="125"
                FontSize="20"
                FontFamily="Candara"
                Command="{Binding YesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Button Content="No"
                HorizontalAlignment="Left"
                Margin="165,280,0,0"
                VerticalAlignment="Top"
                Height="45"
                Width="125"
                FontFamily="Candara"
                FontSize="20"
                Command="{Binding NoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        <Button Content="Ok"
                HorizontalAlignment="Left"
                Margin="300,280,0,0"
                VerticalAlignment="Top"
                Height="45"
                Width="125"
                FontFamily="Candara"
                FontSize="20"
                Command="{Binding OkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>