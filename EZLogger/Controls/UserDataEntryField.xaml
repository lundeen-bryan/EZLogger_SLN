<UserControl x:Class="UserDataEntryField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hw="http://schemas.hpod9.com/haley/wpf"
             xmlns:materialDesign="http://materialdesigninxmal.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:EZLogger"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <GroupBox Header="{Binding HeaderText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  Margin="10,5,0,0"
                  VerticalAlignment="Top"
                  FontFamily="Lucida Fax"
                  Height="80"
                  BorderBrush="Black"
                  Foreground="#FF464646"
                  HorizontalAlignment="Left"
                  Width="335">
            <hw:PlainTextBox x:Name="txtBox"
                             Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             WaterMark="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             FontFamily="Consolas"
                             FontSize="14"
                             Padding="5"
                             BorderBrush="#FF646464"
                             Margin="15,0,0,0"
                             Width="300"
                             Height="40" />
        </GroupBox>
    </Grid>
</UserControl>