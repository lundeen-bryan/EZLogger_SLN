"WPF ElementHost WinForm Code-Behind Template": {
  "prefix": "wpfhostform",
  "body": [
    "Imports System.Windows.Forms.Integration",
    "Imports Views ' Adjust namespace if needed",
    "",
    "Public Class ${1:HostFormName}",
    "",
    "    Private Sub ${1}_Load(sender As Object, e As EventArgs) Handles MyBase.Load",
    "        Dim view As New ${2:UserControlViewName}()",
    "        ElementHost1.Child = view",
    "",
    "        ' Set form size and title",
    "        Me.ClientSize = New Drawing.Size(${3:900}, ${4:500})",
    "        Me.Text = \"${5:Window Title}\"",
    "",
    "        ' Optional UI settings",
    "        Me.MinimizeBox = False",
    "        Me.MaximizeBox = False",
    "        Me.ShowIcon = False",
    "        Me.FormBorderStyle = FormBorderStyle.FixedSingle",
    "",
    "        ' Optional: center the window",
    "        Me.StartPosition = FormStartPosition.CenterScreen",
    "",
    "        ' Optional: manually size and position the ElementHost",
    "        ElementHost1.Width = Me.ClientSize.Width - 40",
    "        ElementHost1.Height = Me.ClientSize.Height - 40",
    "        ElementHost1.Location = New Drawing.Point(20, 20)",
    "    End Sub",
    "",
    "End Class"
  ],
  "description": "VB.NET code-behind template for a WinForm that hosts a WPF UserControl via ElementHost (EZLogger pattern)"
}
