"WPF UserControl Code-Behind (with HostForm Close Pattern)": {
  "prefix": "wpfpanel",
  "body": [
    "Imports System.Windows",
    "Imports EZLogger.Helpers",
    "Imports EZLogger.Handlers",
    "",
    "Partial Public Class ${1:UserControlName}",
    "    Inherits Controls.UserControl",
    "",
    "    Private ReadOnly _handler As New ${2:HandlerClassName}()",
    "    Private ReadOnly _hostForm As Form",
    "",
    "    Public Sub New(hostForm As Form)",
    "        InitializeComponent()",
    "        _hostForm = hostForm",
    "        WireUpButtons()",
    "    End Sub",
    "",
    "    Private Sub WireUpButtons()",
    "        AddHandler ${3:Btn_Close}.Click, AddressOf ${3}_Click",
    "    End Sub",
    "",
    "    Private Sub ${3}_Click(sender As Object, e As RoutedEventArgs)",
    "        _handler.HandleCloseClick(_hostForm)",
    "    End Sub",
    "",
    "End Class"
  ],
  "description": "EZLogger-style WPF UserControl code-behind that stores and closes the host Form"
}
